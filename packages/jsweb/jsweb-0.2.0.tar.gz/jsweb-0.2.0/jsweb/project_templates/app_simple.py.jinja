from jsweb import JsWebApp, render, __VERSION__
import config

app = JsWebApp(config=config)

@app.route("/")
def home(req):
    context = {
        "name": app.config.APP_NAME,
        "version": app.config.VERSION,
        "library_version": __VERSION__,
        "req": req
    }
    return render(req, "welcome.html", context)

