# OSCAR Configuration Example
# Copy this file to .env and fill in your actual values

# Primary OSCAR endpoint for testing
OSCAR_ENDPOINT=https://your-oscar-cluster.example.com

# Alternative OSCAR endpoint for examples  
OSCAR_TEST_ENDPOINT=https://oscar.test.fedcloud.eu

# OSCAR Authentication - Basic Auth
OSCAR_USERNAME=your_username
OSCAR_PASSWORD=your_password

# OSCAR Authentication - Token (use this OR username/password, not both)
# OSCAR_TOKEN=your_actual_oidc_token_here

# OSCAR Service Configuration
SERVICE_NAME=run-script-event2
MOUNT_PATH=/mnt/cwl-oscar/mount

# Development/Testing Configuration
TEST_OSCAR_ENDPOINT=https://your-test-oscar-cluster.example.com
TEST_OSCAR_USERNAME=your_test_username
TEST_OSCAR_PASSWORD=your_test_password
TEST_SERVICE_NAME=run-script-event2
