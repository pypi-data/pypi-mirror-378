[ req ]
default_bits        = 4096
prompt              = no
default_md          = sha256
distinguished_name  = req_distinguished_name
req_extensions      = req_ext

[ req_distinguished_name ]
C                   = XX
ST                  = StateName
L                   = CityName
O                   = CompanyName
OU                  = IT
CN                  = <MY_IP>

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
IP.1 = <MY_IP>   # Replace with your actual IP address