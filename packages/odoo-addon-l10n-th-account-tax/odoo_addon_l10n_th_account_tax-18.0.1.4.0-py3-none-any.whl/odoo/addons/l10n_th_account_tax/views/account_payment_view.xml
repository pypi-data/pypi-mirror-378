<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field eval="2" name="priority" />
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    name="button_wht_certs"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-bars"
                    invisible="wht_certs_count == 0"
                    groups="account.group_account_invoice"
                >
                    <field name="wht_certs_count" />
                    <span invisible="wht_certs_count &gt; 1">WHT Cert</span>
                    <span invisible="wht_certs_count &lt;= 1">WHT Certs</span>
                </button>
            </div>
            <xpath expr="//header[last()]" position="after">
                <field name="wht_cert_status" invisible="1" />
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    invisible="wht_cert_status != 'none' or state != 'paid'"
                >
                    This entry containg withholding tax, but no withholding tax certs. created yet.
                    <button
                    name="create_wht_cert"
                    string="⇒ Create withholding tax cert."
                    type="object"
                    class="oe_link"
                    invisible="state != 'paid'"
                    title="Create withholding tax certificate objects, based on withholding moves"
                />
                </div>
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    invisible="wht_cert_status != 'draft'"
                >
                    Withholding tax certs. created but still draft.
                    <button
                    id="link_wht_certs"
                    name="button_wht_certs"
                    string="⇒ Show withholding tax certs"
                    type="object"
                    class="oe_link"
                    invisible="state != 'paid'"
                />
                </div>
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    invisible="wht_cert_status != 'cancel'"
                >
                    All related withholding tax certs. was cancelled.
                    <button
                    name="button_wht_certs"
                    string="⇒ Show withholding tax certs"
                    type="object"
                    class="oe_link"
                />
                </div>
            </xpath>
            <button name="action_post" position="after">
                <field name="to_clear_tax" invisible="1" />
                <button
                    name="open_clear_tax"
                    type="object"
                    string="Clear Tax"
                    class="oe_highlight"
                    invisible="not to_clear_tax or state != 'paid'"
                />
            </button>
            <group position="after">
                <notebook invisible="not tax_invoice_ids">
                    <page string="Tax Invoice" name="tax_invoice">
                        <field name="tax_invoice_ids">
                            <list editable="bottom" create="0" delete="1">
                                <field name="to_clear_tax" column_invisible="1" />
                                <field name="account_id" optional="hide" />
                                <field name="partner_id" optional="hide" />
                                <field
                                    name="tax_invoice_number"
                                    readonly="not to_clear_tax"
                                />
                                <field
                                    name="tax_invoice_date"
                                    readonly="not to_clear_tax"
                                />
                                <field
                                    name="report_late_mo"
                                    readonly="not to_clear_tax"
                                    optional="show"
                                />
                                <field name="report_date" optional="show" />
                                <field name="tax_base_amount" />
                                <field name="balance" sum="Total Tax" />
                                <button
                                    name="copy"
                                    string="Split"
                                    type="object"
                                    icon="fa-files-o"
                                    invisible="not to_clear_tax"
                                />
                            </list>
                        </field>
                    </page>
                </notebook>
                <group
                    id="wht_move"
                    string="Withholding Moves"
                    invisible="not wht_move_ids or payment_type != 'outbound'"
                >
                    <field
                        name="wht_move_ids"
                        nolabel="1"
                        colspan="2"
                        invisible="payment_type != 'outbound'"
                    >
                        <list editable="bottom" create="0" delete="0">
                            <field name="date" column_invisible="1" />
                            <field name="calendar_year" column_invisible="1" />
                            <field name="partner_id" readonly="1" optional="show" />
                            <field name="wht_cert_income_type" />
                            <field
                                name="wht_cert_income_desc"
                                optional="show"
                                style="white-space: normal;"
                            />
                            <field name="amount_income" />
                            <field name="amount_wht" />
                            <field name="is_pit" optional="show" />
                        </list>
                    </field>
                </group>
            </group>
        </field>
    </record>
    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='date']" position="before">
                <filter
                    name="wht_not_created"
                    string="WHT Not yet created"
                    domain="[('wht_cert_ids', '=', False), ('wht_move_ids', '!=', False)]"
                />
                <separator />
            </xpath>
        </field>
    </record>
</odoo>
