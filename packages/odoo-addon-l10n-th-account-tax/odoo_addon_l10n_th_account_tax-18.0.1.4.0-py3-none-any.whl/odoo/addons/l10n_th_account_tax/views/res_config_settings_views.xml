<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.thai.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <!-- Enable display zero tax line -->
            <xpath
                expr="//block[@name='default_taxes_setting_container']"
                position="inside"
            >
                <setting
                    id="tax_zero_line"
                    company_dependent="1"
                    help="Enable this to record tax lines with zero amount in invoices."
                    title="Check this if you want to include tax lines with 0.00 amount."
                >
                    <field name="tax_zero_line" />
                </setting>
            </xpath>

            <xpath expr="//app[@name='account']" position="inside">
                <block title="Thai Localization" id="l10n_th_account_settings">
                    <setting
                        id="manage_customer_tax_payment_setting"
                        string="Customer Tax Invoice Number"
                        help="In case of Sales Undue VAT, Define your tax invoice number which is created after payment when user didn't setup Tax Invoice Sequence in Tax setting."
                    >
                        <div class="content-group">
                            <div class="row mt16">
                                <field
                                    name="customer_tax_invoice_number"
                                    class="o_light_label"
                                    widget="radio"
                                />
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
