include LICENSE
include README.md
include MANIFEST.in
include pyproject.toml
include .flake8
include .mypy.ini

# Include client directory
recursive-include client *
graft client/static

# Other directories
recursive-include extension *
recursive-include examples *
recursive-include docs *
recursive-include tests *
recursive-include tools *

# Exclude directories
prune tests/__pycache__
prune */__pycache__
prune */*/__pycache__
prune */*/*/__pycache__

# Global exclusions
global-exclude *.py[cod] __pycache__
global-exclude *.so *.dylib *.dll
global-exclude .DS_Store 