{
  "templates": [
    {
      "name": "github-user",
      "method": "GET",
      "url": "https://api.github.com/user",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}",
        "Accept": "application/vnd.github.v3+json"
      },
      "description": "Get current authenticated GitHub user",
      "tags": ["github", "user"]
    },
    {
      "name": "github-repos",
      "method": "GET", 
      "url": "https://api.github.com/user/repos",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}",
        "Accept": "application/vnd.github.v3+json"
      },
      "params": {
        "type": "owner",
        "sort": "updated",
        "per_page": "10"
      },
      "description": "Get user's repositories",
      "tags": ["github", "repos"]
    },
    {
      "name": "create-github-issue",
      "method": "POST",
      "url": "https://api.github.com/repos/${REPO_OWNER}/${REPO_NAME}/issues",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}",
        "Accept": "application/vnd.github.v3+json",
        "Content-Type": "application/json"
      },
      "body": "{\"title\": \"${ISSUE_TITLE}\", \"body\": \"${ISSUE_BODY}\", \"labels\": [\"${ISSUE_LABEL}\"]}",
      "description": "Create a new GitHub issue",
      "tags": ["github", "issues", "create"]
    },
    {
      "name": "jsonplaceholder-posts",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/posts",
      "headers": {
        "Accept": "application/json"
      },
      "params": {
        "_limit": "${LIMIT}"
      },
      "description": "Get posts from JSONPlaceholder (for testing)",
      "tags": ["testing", "demo"]
    },
    {
      "name": "create-jsonplaceholder-post",
      "method": "POST",
      "url": "https://jsonplaceholder.typicode.com/posts",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": "{\"title\": \"${POST_TITLE}\", \"body\": \"${POST_BODY}\", \"userId\": ${USER_ID}}",
      "description": "Create a new post on JSONPlaceholder",
      "tags": ["testing", "demo", "create"]
    },
    {
      "name": "httpbin-get",
      "method": "GET",
      "url": "https://httpbin.org/get",
      "headers": {
        "User-Agent": "API-Tester/1.0",
        "Accept": "application/json"
      },
      "params": {
        "test": "true",
        "timestamp": "${TIMESTAMP}"
      },
      "description": "Test GET request with HTTPBin",
      "tags": ["testing", "httpbin"]
    },
    {
      "name": "httpbin-post",
      "method": "POST",
      "url": "https://httpbin.org/post",
      "headers": {
        "Content-Type": "application/json",
        "User-Agent": "API-Tester/1.0"
      },
      "body": "{\"message\": \"${MESSAGE}\", \"timestamp\": \"${TIMESTAMP}\"}",
      "description": "Test POST request with HTTPBin",
      "tags": ["testing", "httpbin"]
    },
    {
      "name": "rest-countries",
      "method": "GET",
      "url": "https://restcountries.com/v3.1/name/${COUNTRY_NAME}",
      "headers": {
        "Accept": "application/json"
      },
      "description": "Get country information from REST Countries API",
      "tags": ["demo", "countries"]
    },
    {
      "name": "weather-api",
      "method": "GET",
      "url": "https://api.openweathermap.org/data/2.5/weather",
      "headers": {
        "Accept": "application/json"
      },
      "params": {
        "q": "${CITY_NAME}",
        "appid": "${WEATHER_API_KEY}",
        "units": "metric"
      },
      "description": "Get weather information for a city",
      "tags": ["weather", "demo"]
    },
    {
      "name": "graphql-github-user",
      "method": "POST",
      "url": "https://api.github.com/graphql",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}",
        "Content-Type": "application/json"
      },
      "body": "{\"query\": \"query { viewer { login name email bio } }\"}",
      "description": "GraphQL query to get GitHub user info",
      "tags": ["github", "graphql", "user"]
    }
  ]
}