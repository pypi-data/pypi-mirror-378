# Include the README and LICENSE files
include README.md
include LICENSE
include CHANGELOG.md

# Include the verification summary and organization docs
include verification_summary.md
include ORGANIZATION_SUMMARY.md

# Include requirements files
include requirements.txt
include requirements-dev.txt

# Include the reference paper
recursive-include reference_paper *.tex *.pdf

# Include example data and notebooks
recursive-include bisc_package/examples *.py *.txt *.ipynb *.md

# Include test files
recursive-include bisc_package/tests *.py

# Include package data
recursive-include bisc_package *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo