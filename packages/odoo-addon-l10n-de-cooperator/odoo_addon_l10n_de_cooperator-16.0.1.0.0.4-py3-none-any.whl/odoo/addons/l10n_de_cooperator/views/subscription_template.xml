<odoo>

    <template id="iban_template_de" inherit_id="cooperator_website.iban_template">
        <xpath expr="//div[@name='iban_template_container']" position="inside">
            <div class="mb-3 field-bank_account" name="iban_container">
                <label for="iban" class="form-label">Bank Account Number</label>
                <input
                    t-attf-class="form-control form-control-sm{{ error and 'iban' in error and ' is-invalid' or '' }}"
                    type="text"
                    name="iban"
                    id="iban"
                    required="True"
                    t-att-readonly="logged"
                    t-att-value="iban"
                    placeholder="DE12 3456 7890 1234 5678 90"
                />
            </div>
        </xpath>
    </template>

</odoo>
