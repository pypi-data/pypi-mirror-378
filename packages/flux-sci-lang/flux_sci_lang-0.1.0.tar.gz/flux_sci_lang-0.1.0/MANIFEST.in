# Include documentation
include README.md
include PRODUCTION_README.md
include LICENSE
include requirements.txt
include FLUX_SCIENTIFIC_SPEC.md

# Include examples
recursive-include examples *.flux *.py *.md

# Include templates
recursive-include templates *.flux

# Include test files
recursive-include tests *.py *.flux

# Include data files
recursive-include src *.txt *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude *.swp
global-exclude *~

# Exclude development files
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
exclude .github