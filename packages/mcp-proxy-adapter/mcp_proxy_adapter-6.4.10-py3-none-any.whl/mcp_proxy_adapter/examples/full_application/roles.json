{
    "roles": {
        "admin": {
            "permissions": ["*"],
            "description": "Administrator with full access"
        },
        "user": {
            "permissions": ["read", "write"],
            "description": "Regular user with read/write access"
        },
        "readonly": {
            "permissions": ["read"],
            "description": "Read-only user"
        }
    },
    "user_roles": {
        "admin": "admin",
        "user": "user",
        "readonly": "readonly"
    }
}
