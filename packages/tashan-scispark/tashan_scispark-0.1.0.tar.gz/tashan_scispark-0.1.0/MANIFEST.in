# Include documentation files
include README.md
include README_MCP.md
include LICENSE
include pyproject.toml

# Include configuration files
include mcp_config.json
include env.example
include requirements.txt
include requirements_mcp.txt

# Include startup scripts
include *.py
include *.bat

# Include app package and all subpackages
recursive-include app *.py
recursive-include app/templates *

# Include API package
recursive-include Api *.py

# Exclude cache and temporary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.log

# Exclude development and runtime directories
prune runs
prune temp
prune .git
prune __pycache__

# Exclude development files
exclude .gitignore
exclude *.docx