# Include essential files for PyPI package
include README.md
include LICENSE

# Include only the core package
recursive-include basicagi *.py

# Exclude development files
exclude tests/*
exclude examples/*
exclude CLAUDE.md
exclude git-hooks-setup.sh
exclude .pre-commit-config.yaml

# Exclude build artifacts and caches
global-exclude __pycache__/*
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .git*
global-exclude .DS_Store