{
  "mcp.servers": {
    "code-search": {
      "command": "python",
      "args": [
        "/absolute/path/to/CodeLens/src/mcp/fastmcp_server.py"
      ],
      "env": {
        "PYTHONPATH": "/absolute/path/to/CodeLens/src",
        "PYTHONIOENCODING": "utf-8"
      },
      "cwd": "/absolute/path/to/CodeLens",
      "restart": true
    }
  },
  "mcp.client": {
    "timeout": 30000,
    "retries": 3,
    "logLevel": "info"
  },
  "extensions": {
    "mcp-client": {
      "enabled": true,
      "autoStart": true,
      "showNotifications": true
    }
  }
}