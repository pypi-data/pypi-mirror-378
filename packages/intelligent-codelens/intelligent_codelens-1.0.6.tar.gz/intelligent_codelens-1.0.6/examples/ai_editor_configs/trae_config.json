{
  "mcpServers": {
    "code-search": {
      "name": "CodeLens - 智能代码搜索引擎",
      "description": "为Trae AI提供智能代码搜索和分析功能",
      "command": "python",
      "args": [
        "/absolute/path/to/CodeLens/src/mcp/fastmcp_server.py",
        "--config",
        "/absolute/path/to/CodeLens/config/mcp_config.yaml"
      ],
      "env": {
        "PYTHONPATH": "/absolute/path/to/CodeLens/src",
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUNBUFFERED": "1"
      },
      "cwd": "/absolute/path/to/CodeLens",
      "timeout": 30000,
      "restart": true,
      "capabilities": [
        "search_code",
        "get_file_content", 
        "get_function_details",
        "get_database_stats"
      ],
      "settings": {
        "max_results": 20,
        "include_content": true,
        "search_timeout": 10,
        "cache_enabled": true
      }
    }
  },
  "ai_assistant": {
    "code_analysis": {
      "enabled": true,
      "auto_search": true,
      "context_window": 50
    },
    "suggestions": {
      "use_mcp_context": true,
      "relevance_threshold": 0.7
    }
  }
}