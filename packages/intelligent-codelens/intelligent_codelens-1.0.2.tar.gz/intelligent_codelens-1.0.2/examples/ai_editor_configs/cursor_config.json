{
  "mcp": {
    "servers": {
      "code-search": {
        "command": "python",
        "args": [
          "/absolute/path/to/CodeLens/src/mcp/fastmcp_server.py",
          "--config",
          "/absolute/path/to/CodeLens/config/mcp_config.yaml"
        ],
        "env": {
          "PYTHONPATH": "/absolute/path/to/CodeLens/src"
        },
        "initializationOptions": {
          "searchDirectories": [
            "/path/to/your/project1",
            "/path/to/your/project2"
          ],
          "maxResults": 15,
          "includeTests": true
        }
      }
    }
  },
  "cursor": {
    "ai": {
      "codeCompletion": {
        "useMcpContext": true,
        "contextLines": 30
      },
      "chat": {
        "enableCodeSearch": true,
        "autoSearchThreshold": 0.8
      }
    },
    "editor": {
      "searchIntegration": {
        "enabled": true,
        "shortcut": "Ctrl+Shift+S"
      }
    }
  }
}