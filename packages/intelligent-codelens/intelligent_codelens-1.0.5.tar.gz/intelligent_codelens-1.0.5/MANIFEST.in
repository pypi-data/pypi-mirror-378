# MANIFEST.in - 指定包含在分发包中的文件

# 包含文档文件
include README.md
include CHANGELOG.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# 包含版本文件
include src/_version.py

# 包含配置文件
recursive-include src/config *.yaml *.yml *.json
recursive-include examples *.py *.yaml *.yml *.json *.md

# 包含文档
recursive-include docs *.md *.rst *.txt *.yaml *.yml

# 包含脚本
recursive-include scripts *.sh *.py

# 包含源代码中的数据文件
recursive-include src *.yaml *.yml *.json *.md *.txt

# 包含测试文件（可选）
recursive-include test *.py
recursive-include tests *.py

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.db
global-exclude *.log
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll

# 排除临时文件和缓存
global-exclude temp/*
global-exclude .pytest_cache/*
global-exclude .benchmarks/*
global-exclude *.db
global-exclude search.db

# 排除IDE文件
global-exclude .vscode/*
global-exclude .idea/*
global-exclude *.swp
global-exclude *.swo

# 排除构建文件
global-exclude build/*
global-exclude dist/*
global-exclude *.egg-info/*