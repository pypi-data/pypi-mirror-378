{
  "mcpServers": {
    "code-search": {
      "command": "python",
      "args": [
        "/absolute/path/to/CodeLens/src/mcp/fastmcp_server.py"
      ],
      "env": {
        "PYTHONPATH": "/absolute/path/to/CodeLens/src",
        "PYTHONIOENCODING": "utf-8"
      }
    }
  },
  "globalShortcuts": {
    "search_code": "Cmd+Shift+F"
  },
  "ui": {
    "theme": "auto",
    "codeHighlighting": true,
    "showLineNumbers": true
  }
}