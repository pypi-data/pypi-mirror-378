{
  "swagger": "2.0",
  "info": {
    "title": "AI Model Sentinel API",
    "description": "Comprehensive AI Model Monitoring and Drift Detection",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/monitor": {
      "post": {
        "tags": ["Monitoring"],
        "summary": "Start monitoring an AI model",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "model_id": {"type": "string"},
                "model_path": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Monitoring started successfully"
          }
        }
      }
    },
    "/api/v1/reports/{model_id}": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get monitoring reports",
        "parameters": [
          {
            "name": "model_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Reports retrieved successfully"
          }
        }
      }
    }
  }
}
