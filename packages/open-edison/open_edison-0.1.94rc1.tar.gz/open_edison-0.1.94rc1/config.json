{
    "server": {
        "host": "0.0.0.0",
        "port": 3000,
        "api_key": "dev-api-key-change-me"
    },
    "autoconfig_url": "https://api.edison.watch/api/config-perms",
    "logging": {
        "level": "INFO"
    },
    "edison-watch-api-key": "change-me",
    "mcp_servers": [
        {
            "name": "filesystem",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/tmp",
                "/private/tmp"
            ],
            "env": {},
            "enabled": true,
            "roots": []
        },
        {
            "name": "fetch",
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ],
            "env": {},
            "enabled": true
        },
        {
            "name": "github",
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://api.githubcopilot.com/mcp/",
                "--header",
                "Authorization: Bearer ${GITHUB_TOKEN}"
            ],
            "env": {},
            "enabled": false
        },
        {
            "name": "sqlite",
            "command": "npx",
            "args": [
                "-y",
                "mcp-sqlite",
                "./test.db"
            ],
            "env": {},
            "enabled": true,
            "roots": []
        },
        {
            "name": "supabase",
            "command": "npx",
            "args": [
                "-y",
                "@supabase/mcp-server-supabase@latest"
            ],
            "env": {
                "SUPABASE_ACCESS_TOKEN": "your-supabase-access-token"
            },
            "enabled": false
        },
        {
            "name": "atlassian",
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://mcp.atlassian.com/v1/sse"
            ],
            "env": {},
            "enabled": false
        },
        {
            "name": "figma",
            "command": "npx",
            "args": [
                "-y",
                "figma-developer-mcp",
                "--stdio"
            ],
            "env": {
                "FIGMA_API_KEY": "your-figma-api-key"
            },
            "enabled": false
        },
        {
            "name": "figma_dev_mode",
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "http://127.0.0.1:3845/sse"
            ],
            "env": {},
            "enabled": false
        },
        {
            "name": "playwright",
            "command": "npx",
            "args": [
                "-y",
                "@automatalabs/mcp-server-playwright"
            ],
            "env": {},
            "enabled": false
        },
        {
            "name": "google_drive",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-gdrive"
            ],
            "env": {
                "GOOGLE_CLIENT_ID": "your-client-id",
                "GOOGLE_CLIENT_SECRET": "your-client-secret",
                "GOOGLE_REFRESH_TOKEN": "your-refresh-token"
            },
            "enabled": false
        },
        {
            "name": "zapier",
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://mcp.zapier.com/api/mcp/s/REPLACE_WITH_ACCESS_TOKEN/mcp",
                "--header",
                "Accept: application/json, text/event-stream"
            ],
            "env": {},
            "enabled": false
        }
    ]
}