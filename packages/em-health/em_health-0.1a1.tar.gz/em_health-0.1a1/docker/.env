# Edit the variables below
POSTGRES_HOST=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_GRAFANA_PASSWORD=postgres
POSTGRES_PGANALYZE_PASSWORD=pganalyze

GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_API_TOKEN=
GRAFANA_SMTP_ENABLED=false
GRAFANA_SMTP_HOST=mail.domain.com:25
GRAFANA_SMTP_USER=
GRAFANA_SMTP_PASSWORD=
GRAFANA_SMTP_SKIP_VERIFY=true
GRAFANA_EMAIL_FROM=emhealth@domain.com
GRAFANA_EMAIL_TO=em@domain.com

MSSQL_USER=None
MSSQL_PASSWORD=None

### Advanced settings, do not modify ####################
EMHEALTH_DEBUG=true

# Max size in bytes per COPY write
WRITE_DATA_CHUNK_SIZE=8388608

# Polling interval in seconds
WATCH_INTERVAL=300
# Number of times to check the file for the size change
WATCH_SIZE_COUNTER=10
# Number of files to import in parallel
WATCH_WORKERS=4

# pganalyze settings
TBL_SNAPSHOTS_CHUNK_SIZE="4 weeks"
TBL_STATEMENTS_CHUNK_SIZE="1 week"
TBL_STATS_RETENTION="6 months"
# run auto EXPLAIN for queries longer than this time (ms)
MIN_QUERY_EXPLAIN=500

# Job schedule settings
JOB_LOGS_INTERVAL="1 minutes"
JOB_STATEMENTS_INTERVAL="1 minutes"
JOB_DBSTATS_INTERVAL="10 minutes"
JOB_TBLSTATS_INTERVAL="10 minutes"
JOB_IDXSTATS_INTERVAL="10 minutes"

# CAGG settings
CAGG_REFRESH_INTERVAL="12 hours"
# Data before start offset will not be recalculated
CAGG_START_OFFSET="4 days"
# Data after end offset is not included
CAGG_END_OFFSET="1 day"

TEM_SCHEMA_VERSION=1
SEM_SCHEMA_VERSION=1
