/* SONIC THE HEDGEHOG INSPIRED THEME */
/* Classic Sonic colors - electric blue, vibrant red, and golden rings */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 0.5 #0080ff,
                                stop: 1 #0040ff);
    color: #ffffff;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 0.5 #0080ff,
                                stop: 1 #0040ff);
    color: #ffffff;
    font-size: 13px;
    font-weight: bold;
}

/* Sonic's speed buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff6b35, stop: 0.5 #ff4500,
                                stop: 1 #dc143c);
    border: 3px outset #ffd700;
    border-radius: 12px;
    padding: 10px 16px;
    color: #ffffff;
    min-height: 16px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff8c69, stop: 0.5 #ff6b35,
                                stop: 1 #ff4500);
    border: 3px outset #ffff00;
    text-shadow: 1px 1px 2px #000000;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #b22222, stop: 0.5 #8b0000,
                                stop: 1 #654321);
    border: 3px inset #ffd700;
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #708090, stop: 1 #2f4f4f);
    border: 3px outset #696969;
    color: #c0c0c0;
}

/* Green Hill Zone text areas */
QTextEdit, QPlainTextEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32cd32, stop: 1 #228b22);
    border: 4px outset #8b4513;
    border-radius: 10px;
    padding: 12px;
    color: #ffffff;
    selection-background-color: #ffd700;
    selection-color: #000000;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 4px outset #ffd700;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #90ee90, stop: 1 #32cd32);
}

/* Ring collection lists */
QListWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32cd32, stop: 1 #228b22);
    border: 4px outset #8b4513;
    border-radius: 10px;
    alternate-background-color: #90ee90;
    color: #ffffff;
    gridline-color: #ffd700;
    outline: none;
}

QListWidget::item {
    padding: 10px 12px;
    border-bottom: 2px solid #ffd700;
    border-radius: 6px;
    margin: 2px;
}

QListWidget::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffd700, stop: 1 #daa520);
    color: #000000;
    border-radius: 8px;
    border: 2px solid #ff4500;
    font-weight: bold;
}

QListWidget::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 1 #0080ff);
    color: #ffffff;
    border-radius: 8px;
}

/* Spin dash menu */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0080ff, stop: 1 #0040ff);
    color: #ffffff;
    border-bottom: 4px outset #ffd700;
    font-weight: bold;
}

QMenuBar::item {
    background: transparent;
    padding: 8px 14px;
    border-radius: 6px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffd700, stop: 1 #daa520);
    color: #000000;
    border: 2px outset #ff4500;
}

QMenu {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 1 #0040ff);
    border: 4px outset #ffd700;
    border-radius: 10px;
    padding: 6px;
}

QMenu::item {
    padding: 8px 20px;
    border-radius: 6px;
    margin: 2px;
    color: #ffffff;
}

QMenu::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff6b35, stop: 1 #ff4500);
    color: #ffffff;
}

/* Loop de loop scrollbars */
QScrollBar:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #8b4513, stop: 1 #a0522d);
    width: 16px;
    border: 3px outset #228b22;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ffd700, stop: 0.5 #ffff00,
                                stop: 1 #daa520);
    border: 3px outset #ff4500;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ffff00, stop: 0.5 #fffacd,
                                stop: 1 #ffd700);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #8b4513, stop: 1 #a0522d);
    height: 16px;
    border: 3px outset #228b22;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffd700, stop: 0.5 #ffff00,
                                stop: 1 #daa520);
    border: 3px outset #ff4500;
    border-radius: 6px;
    min-width: 30px;
}

/* Chemical Plant tabs */
QTabWidget::pane {
    border: 4px outset #ffd700;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32cd32, stop: 1 #228b22);
    border-radius: 10px;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0080ff, stop: 1 #0040ff);
    border: 4px outset #1e90ff;
    padding: 10px 18px;
    margin-right: 3px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    font-weight: bold;
    color: #ffffff;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffd700, stop: 1 #daa520);
    border: 4px outset #ff4500;
    border-bottom: none;
    color: #000000;
}

QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #87ceeb, stop: 1 #1e90ff);
    border: 4px outset #ffd700;
    color: #ffffff;
}

/* Speed boost status bar */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #228b22, stop: 1 #006400);
    border-top: 4px outset #ffd700;
    color: #ffffff;
    font-weight: bold;
}

/* Chaos emerald input fields */
QLineEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #e0ffff, stop: 1 #b0e0e6);
    border: 4px outset #0080ff;
    border-radius: 8px;
    padding: 8px;
    color: #000080;
    selection-background-color: #ffd700;
    selection-color: #000000;
}

QLineEdit:focus {
    border: 4px outset #ffd700;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #e0ffff);
}

/* Power-up combo boxes */
QComboBox {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 1 #0040ff);
    border: 4px outset #87ceeb;
    border-radius: 8px;
    padding: 8px;
    color: #ffffff;
    min-width: 80px;
    font-weight: bold;
}

QComboBox:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #87ceeb, stop: 1 #1e90ff);
    border: 4px outset #ffd700;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 8px solid #ffffff;
}

QComboBox QAbstractItemView {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 1 #0040ff);
    border: 4px outset #87ceeb;
    border-radius: 8px;
    selection-background-color: #ffd700;
    selection-color: #000000;
    color: #ffffff;
}

/* Ring counter progress bars */
QProgressBar {
    border: 4px outset #ffd700;
    border-radius: 8px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32cd32, stop: 1 #228b22);
    text-align: center;
    color: #ffffff;
    font-weight: bold;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ffd700, stop: 0.5 #ffff00,
                                stop: 1 #ffa500);
    border-radius: 6px;
    margin: 2px;
}

/* Super Sonic tooltips */
QToolTip {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffff00, stop: 1 #ffd700);
    border: 4px outset #ff4500;
    color: #000000;
    padding: 8px 12px;
    border-radius: 8px;
    font-weight: bold;
}

/* Additional Sonic styling */
QLabel {
    color: #ffffff;
    font-weight: bold;
}

QGroupBox {
    border: 4px outset #ffd700;
    border-radius: 12px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: bold;
    color: #ffffff;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32cd32, stop: 1 #228b22);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 12px 0 12px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ff4500, stop: 1 #ffd700);
    color: #ffffff;
    font-weight: bold;
    border-radius: 6px;
    border: 3px outset #1e90ff;
}

QCheckBox {
    color: #ffffff;
    font-weight: bold;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    border: 2px outset #ffd700;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e90ff, stop: 1 #0040ff);
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #ffd700, stop: 1 #ffff00);
    border: 2px outset #ff4500;
}

QCheckBox::indicator:hover {
    border: 2px outset #ffff00;
}