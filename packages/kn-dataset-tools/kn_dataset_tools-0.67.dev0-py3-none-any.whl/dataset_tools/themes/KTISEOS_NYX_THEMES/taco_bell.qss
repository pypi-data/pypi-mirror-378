/* TACO BELL THEME */
/* Inspired by Taco Bell's vibrant logo colors: purples, pinks, and yellows. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #800080, stop: 0.3 #FF1493,
                                stop: 0.7 #FFFF00, stop: 1 #800080);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #800080, stop: 0.3 #FF1493,
                                stop: 0.7 #FFFF00, stop: 1 #800080);
    color: #FFFFFF;
    font-family: 'Impact', sans-serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF1493, stop: 1 #FFFF00);
    border: 3px solid #800080;
    border-radius: 5px;
    padding: 10px 15px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 1 #FF1493);
    border: 3px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #800080;
    border-radius: 5px;
    padding: 8px;
    color: #FF1493;
    selection-background-color: #FFFF00;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #800080;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #FF1493;
}

QListWidget::item:selected {
    background: #FFFF00;
    color: #800080;
}
