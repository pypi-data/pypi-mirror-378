/* MEANING OF LIFE THEME (42) */
/* A profound, perhaps slightly absurd, mix of colors, reflecting the philosophical nature of the request. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #424242, stop: 0.3 #607D8B,
                                stop: 0.7 #9E9E9E, stop: 1 #424242);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #424242, stop: 0.3 #607D8B,
                                stop: 0.7 #9E9E9E, stop: 1 #424242);
    color: #FFFFFF;
    font-family: 'Georgia', serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 1 #FFA500);
    border: 3px solid #FFFFFF;
    border-radius: 5px;
    padding: 10px 15px;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFA500, stop: 1 #FFD700);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #424242;
    border-radius: 5px;
    padding: 8px;
    color: #607D8B;
    selection-background-color: #FFA500;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #424242;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #607D8B;
}

QListWidget::item:selected {
    background: #FFA500;
    color: #FFFFFF;
}
