/* GEOCITIES DEUX - MAXIMUM OVERDRIVE RAINBOW EDITION */
/* Warning: May cause temporary blindness and extreme nostalgia */

/* Main window with starfield background */
QMainWindow {
    background-image: url("https://raw.githubusercontent.com/Ktiseos-Nyx/qss_themes/master/themes/assets/ss036.png");
    background-repeat: repeat;
    background-position: center;
}

/* General widget styling - RAINBOW EXPLOSION */
QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 rgba(255, 0, 255, 0.3), 
                               stop: 0.2 rgba(0, 255, 255, 0.3), 
                               stop: 0.4 rgba(255, 255, 0, 0.3), 
                               stop: 0.6 rgba(255, 0, 128, 0.3), 
                               stop: 0.8 rgba(128, 255, 0, 0.3), 
                               stop: 1 rgba(255, 128, 255, 0.3));
    color: #FF69B4;
    font-size: 12pt;
    font-weight: bold;
}

/* ULTIMATE 90s RAINBOW BUTTONS */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF1493, 
                                stop: 0.15 #FF4500, 
                                stop: 0.3 #FFD700, 
                                stop: 0.45 #00FF7F, 
                                stop: 0.6 #00BFFF, 
                                stop: 0.75 #8A2BE2, 
                                stop: 1 #FF69B4);
    border: 4px ridge #FFD700;
    border-radius: 8px;
    padding: 8px 20px;
    font-weight: bold;
    font-size: 14pt;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px #FFFFFF;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF69B4, 
                                stop: 0.15 #8A2BE2, 
                                stop: 0.3 #00BFFF, 
                                stop: 0.45 #00FF7F, 
                                stop: 0.6 #FFD700, 
                                stop: 0.75 #FF4500, 
                                stop: 1 #FF1493);
    border: 4px groove #FF00FF;
    color: #FFFFFF;
    text-shadow: 3px 3px 6px #000000;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF0000, 
                                stop: 0.5 #FFFF00, 
                                stop: 1 #00FF00);
    border: 4px inset #00FFFF;
    color: #000000;
    text-shadow: 1px 1px 2px #FFFFFF;
}

/* PSYCHEDELIC TEXT AREAS */
QTextEdit, QPlainTextEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                               stop: 0 rgba(255, 240, 245, 0.9), 
                               stop: 0.5 rgba(230, 230, 255, 0.9), 
                               stop: 1 rgba(255, 250, 240, 0.9));
    color: #4B0082;
    border: 3px ridge #FF1493;
    font-size: 11pt;
    font-weight: bold;
    selection-background-color: #FF69B4;
    selection-color: #FFFFFF;
}

/* RAINBOW LIST WIDGETS */
QListWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 rgba(255, 182, 193, 0.8), 
                               stop: 0.5 rgba(221, 160, 221, 0.8), 
                               stop: 1 rgba(176, 196, 222, 0.8));
    color: #8B008B;
    border: 3px groove #FF1493;
    alternate-background-color: rgba(255, 105, 180, 0.4);
    font-size: 11pt;
    font-weight: bold;
}

QListWidget::item {
    padding: 4px;
    border-bottom: 1px solid rgba(200, 200, 200, 0.5);
}

QListWidget::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #FF1493, stop: 0.5 #00BFFF, stop: 1 #FFD700);
    color: #000000;
    font-weight: bold;
    text-shadow: 1px 1px 2px #FFFFFF;
}

QListWidget::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #FFD700, stop: 0.5 #FF69B4, stop: 1 #00FF7F);
    color: #4B0082;
    font-weight: bold;
}

/* EPIC RAINBOW MENU BAR */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #FF1493, 
                               stop: 0.2 #FF4500, 
                               stop: 0.4 #FFD700, 
                               stop: 0.6 #00FF7F, 
                               stop: 0.8 #00BFFF, 
                               stop: 1 #8A2BE2);
    color: #FFFFFF;
    border-bottom: 4px ridge #FFD700;
    font-weight: bold;
    font-size: 12pt;
    text-shadow: 2px 2px 4px #000000;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 #FFFF00, stop: 1 #FF00FF);
    color: #000000;
    text-shadow: 1px 1px 2px #FFFFFF;
    border-radius: 4px;
}

QMenu {
    background-color: rgba(240, 240, 240, 0.9);
    color: #2d1b4d;
    border: 2px outset #C0C0C0;
}

QMenu::item {
    padding: 4px 20px;
}

QMenu::item:selected {
    background-color: rgba(100, 150, 255, 0.8);
    color: #FFFFFF;
}

/* WILD STATUS BAR */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #8A2BE2, 
                               stop: 0.5 #FF1493, 
                               stop: 1 #00BFFF);
    color: #FFFFFF;
    border-top: 4px ridge #FFD700;
    font-weight: bold;
    font-size: 11pt;
    text-shadow: 2px 2px 4px #000000;
}

/* COSMIC SCROLLBARS */
QScrollBar:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #FF69B4, stop: 0.5 #00BFFF, stop: 1 #FFD700);
    width: 20px;
    border: 3px ridge #FF1493;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 #FF1493, stop: 0.5 #8A2BE2, stop: 1 #00FF7F);
    border: 2px ridge #FFD700;
    min-height: 25px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                               stop: 0 #FFD700, stop: 0.5 #FF69B4, stop: 1 #00BFFF);
    border: 2px solid #FFFFFF;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background-color: rgba(200, 200, 200, 0.7);
    border: 2px outset #C0C0C0;
    height: 18px;
}

/* RAINBOW INPUT FIELDS */
QLineEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 rgba(255, 240, 245, 0.95), 
                               stop: 0.5 rgba(240, 248, 255, 0.95), 
                               stop: 1 rgba(255, 250, 240, 0.95));
    color: #8B008B;
    border: 3px ridge #FF1493;
    padding: 6px;
    font-size: 11pt;
    font-weight: bold;
    selection-background-color: #FF69B4;
    selection-color: #FFFFFF;
    border-radius: 4px;
}

QLineEdit:focus {
    border: 4px solid #FFD700;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                               stop: 0 #FFE4E1, stop: 0.5 #E6E6FA, stop: 1 #FFF8DC);
}

/* WILD COMBO BOXES */
QComboBox {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                               stop: 0 rgba(255, 182, 193, 0.9), 
                               stop: 0.5 rgba(221, 160, 221, 0.9), 
                               stop: 1 rgba(176, 196, 222, 0.9));
    color: #4B0082;
    border: 3px ridge #FF1493;
    padding: 6px;
    font-size: 11pt;
    font-weight: bold;
    border-radius: 4px;
}

QComboBox:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                               stop: 0 #FFD700, stop: 0.5 #FF69B4, stop: 1 #00BFFF);
    border: 3px solid #FFFFFF;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border: 1px solid #2d1b4d;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 4px solid #2d1b4d;
}