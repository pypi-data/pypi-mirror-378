/* SANGARIA RAMUNE BLUE THEME */
/* A vibrant, clear blue theme, like the drink. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #87CEEB, stop: 0.5 #ADD8E6,
                                stop: 1 #B0E0E6);
    color: #191970;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #87CEEB, stop: 0.5 #ADD8E6,
                                stop: 1 #B0E0E6);
    color: #191970;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4682B4, stop: 1 #4169E1);
    border: 2px solid #191970;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4169E1, stop: 1 #4682B4);
    border: 2px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #87CEEB;
    border-radius: 3px;
    padding: 5px;
    color: #191970;
    selection-background-color: #4682B4;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #87CEEB;
    border-radius: 3px;
    alternate-background-color: #F0F8FF;
    color: #191970;
}

QListWidget::item:selected {
    background: #4682B4;
    color: #FFFFFF;
}
