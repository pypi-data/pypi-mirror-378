/* DOMINOS PIZZA THEME */
/* Inspired by Dominos Pizza's logo colors: red, blue, and white. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #006491, stop: 0.5 #CC1427,
                                stop: 1 #FFFFFF);
    color: #000000;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #006491, stop: 0.5 #CC1427,
                                stop: 1 #FFFFFF);
    color: #000000;
    font-family: 'Arial', sans-serif;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #CC1427, stop: 1 #006491);
    border: 2px solid #FFFFFF;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #006491, stop: 1 #CC1427);
    border: 2px solid #E0E0E0;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #CC1427;
    border-radius: 3px;
    padding: 5px;
    color: #000000;
    selection-background-color: #006491;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #CC1427;
    border-radius: 3px;
    alternate-background-color: #F0F0F0;
    color: #000000;
}

QListWidget::item:selected {
    background: #006491;
    color: #FFFFFF;
}
