/* MLP: DITZY DOO (DERPY HOOVES) - NORMAL THEME */
/* Inspired by Ditzy Doo's normal gray and yellow themes. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #A9A9A9, stop: 0.3 #D3D3D3,
                                stop: 0.7 #FFFF00, stop: 1 #A9A9A9);
    color: #4B3621;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #A9A9A9, stop: 0.3 #D3D3D3,
                                stop: 0.7 #FFFF00, stop: 1 #A9A9A9);
    color: #4B3621;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 1 #FFD700);
    border: 2px solid #4B3621;
    border-radius: 5px;
    padding: 8px 12px;
    color: #000000;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 1 #FFFF00);
    border: 2px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #A9A9A9;
    border-radius: 3px;
    padding: 5px;
    color: #4B3621;
    selection-background-color: #FFFF00;
    selection-color: #000000;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #A9A9A9;
    border-radius: 3px;
    alternate-background-color: #F0F0F0;
    color: #4B3621;
}

QListWidget::item:selected {
    background: #FFFF00;
    color: #000000;
}
