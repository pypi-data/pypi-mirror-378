/* AMERICAN PIE (MOVIE) THEME */
/* A mix of awkward, slightly crude, and nostalgic colors, reflecting the movie's humor and coming-of-age themes. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 0.3 #FFA500,
                                stop: 0.7 #B0C4DE, stop: 1 #FFD700);
    color: #333333;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 0.3 #FFA500,
                                stop: 0.7 #B0C4DE, stop: 1 #FFD700);
    color: #333333;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DC143C, stop: 1 #B22222);
    border: 3px solid #333333;
    border-radius: 5px;
    padding: 10px 15px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B22222, stop: 1 #DC143C);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #FFD700;
    border-radius: 5px;
    padding: 8px;
    color: #333333;
    selection-background-color: #FFA500;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #FFD700;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #333333;
}

QListWidget::item:selected {
    background: #FFA500;
    color: #FFFFFF;
}
