/* DISTURBED IDEA: MATH CLASS FEELING */
/* A theme that evokes feelings of boredom, confusion, and anxiety, using dull, muted colors with occasional jarring elements. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B0C4DE, stop: 0.3 #A9A9A9,
                                stop: 0.7 #778899, stop: 1 #B0C4DE);
    color: #2F4F4F;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B0C4DE, stop: 0.3 #A9A9A9,
                                stop: 0.7 #778899, stop: 1 #B0C4DE);
    color: #2F4F4F;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DC143C, stop: 1 #B22222);
    border: 3px solid #2F4F4F;
    border-radius: 5px;
    padding: 10px 15px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B22222, stop: 1 #DC143C);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #A9A9A9;
    border-radius: 5px;
    padding: 8px;
    color: #2F4F4F;
    selection-background-color: #DC143C;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #A9A9A9;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #2F4F4F;
}

QListWidget::item:selected {
    background: #DC143C;
    color: #FFFFFF;
}
