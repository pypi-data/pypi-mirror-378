/* POKEMON THEME: MEWTWO */
/* Inspired by Mewtwo - Purples and grays, with a touch of green. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4B0082, stop: 0.3 #8A2BE2,
                                stop: 0.7 #A9A9A9, stop: 1 #4B0082);
    color: #F0F0F0;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4B0082, stop: 0.3 #8A2BE2,
                                stop: 0.7 #A9A9A9, stop: 1 #4B0082);
    color: #F0F0F0;
    font-family: 'Arial', sans-serif;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #32CD32, stop: 1 #228B22);
    border: 2px solid #F0F0F0;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #228B22, stop: 1 #32CD32);
    border: 2px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #4B0082;
    border-radius: 3px;
    padding: 5px;
    color: #8A2BE2;
    selection-background-color: #32CD32;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #4B0082;
    border-radius: 3px;
    alternate-background-color: #F0F0F0;
    color: #8A2BE2;
}

QListWidget::item:selected {
    background: #4B0082;
    color: #FFFFFF;
}
