/* DISTURBED IDEA: MODPODGE GUITAR */
/* A chaotic, messy, and childish theme, with clashing colors and irregular patterns, like a guitar covered in Modpodge and 6th-grade stickers. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF0000, stop: 0.1 #00FF00,
                                stop: 0.2 #0000FF, stop: 0.3 #FFFF00,
                                stop: 0.4 #FF00FF, stop: 0.5 #00FFFF,
                                stop: 0.6 #FF0000, stop: 0.7 #00FF00,
                                stop: 0.8 #0000FF, stop: 0.9 #FFFF00,
                                stop: 1 #FF00FF);
    color: #000000;
    border: 5px dotted #800080;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF0000, stop: 0.1 #00FF00,
                                stop: 0.2 #0000FF, stop: 0.3 #FFFF00,
                                stop: 0.4 #FF00FF, stop: 0.5 #00FFFF,
                                stop: 0.6 #FF0000, stop: 0.7 #00FF00,
                                stop: 0.8 #0000FF, stop: 0.9 #FFFF00,
                                stop: 1 #FF00FF);
    color: #000000;
    font-family: 'Comic Sans MS', cursive;
    font-size: 16px;
}

QPushButton {
    background: #FF0000;
    border: 5px solid #00FF00;
    border-radius: 0px;
    padding: 20px 30px;
    color: #0000FF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: #FFFF00;
}

QTextEdit, QPlainTextEdit {
    background-color: #FFFFFF;
    color: #FF00FF;
    border: 5px solid #00FFFF;
    border-radius: 0px;
    padding: 15px;
}

QListWidget {
    background-color: #000000;
    color: #FFFF00;
    border: 5px solid #FF0000;
    border-radius: 0px;
}

QListWidget::item:selected {
    background-color: #0000FF;
    color: #FFFFFF;
}
