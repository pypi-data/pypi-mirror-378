/*
Mom's 2AM Fever Dreams Collection - "Oops I Thought It Was a Fart"
The most relatable accident known to humanity
Trust Issues: Activated
*/

QWidget {
    background-color: #8B4513; /* Saddle brown base */
    color: #F5DEB3; /* Wheat text */
    font-family: "Arial", sans-serif;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #D2B48C, stop:0.15 #DEB887, stop:0.3 #CD853F, 
                stop:0.45 #A0522D, stop:0.6 #8B4513, stop:0.75 #654321, 
                stop:0.9 #5D4037, stop:1 #D2B48C);
}

/* SUSPICIOUS BULGE BUTTONS! */
QPushButton {
    background: qradial-gradient(ellipse at 40% 70%, #DEB887 30%, #CD853F 60%, #A0522D 90%);
    color: #F5DEB3;
    border: 4px solid #8B4513;
    border-radius: 50px 20px 60px 30px; /* Suspicious bulge shape! */
    padding: 14px 22px;
    font-weight: bold;
    font-size: 13px;
    box-shadow: inset 0px 0px 10px rgba(139,69,19,0.4);
}

QPushButton:hover {
    background: qradial-gradient(ellipse at 60% 80%, #F4A460 20%, #D2691E 50%, #A0522D 80%);
    border-color: #654321;
    border-radius: 60px 25px 70px 35px; /* Expanding bulge! */
    box-shadow: 0px 0px 18px rgba(160,82,45,0.6), inset 0px 0px 8px rgba(101,67,33,0.5);
    color: #FFFACD;
    transform: scale(1.02); /* Slight expansion on hover */
}

QPushButton:pressed {
    background: qradial-gradient(ellipse at 50% 90%, #8B4513 40%, #654321 80%);
    border-radius: 40px 15px 50px 25px; /* Deflated after the incident */
    border-color: #5D4037;
    transform: scale(0.88);
    box-shadow: inset 0px 0px 15px rgba(93,64,55,0.7);
}

/* EMERGENCY TISSUE FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFFACD, stop:0.3 #F5DEB3, stop:0.7 #DEB887, stop:1 #FFFACD);
    color: #8B4513;
    border: 4px solid #CD853F;
    border-radius: 25px 50px 30px 55px; /* Tissue paper shape */
    padding: 12px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #A0522D;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFF8DC, stop:0.4 #FFFACD, stop:0.8 #F5DEB3, stop:1 #FFF8DC);
    border-radius: 35px 60px 40px 65px; /* Urgent tissue grab */
    box-shadow: 0px 0px 15px rgba(205,133,63,0.5);
    color: #654321;
}

/* BATHROOM STALL TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 30%, #F5DEB3 30%, #DEB887 60%, #CD853F 90%);
    border: 5px solid #8B4513;
    border-radius: 20px 20px 80px 80px; /* Toilet bowl shape! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #F4A460, stop:0.4 #D2691E, stop:0.8 #A0522D, stop:1 #8B4513);
    color: #F5DEB3;
    padding: 16px 26px;
    margin: 4px;
    border-radius: 40px 40px 0px 0px; /* Toilet seat tabs */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #654321;
}

QTabBar::tab:selected {
    background: qradial-gradient(ellipse at 50% 40%, #FFFACD 40%, #F5DEB3 80%);
    color: #8B4513;
    border-radius: 50px 50px 0px 0px; /* Open toilet seat */
    border-color: #CD853F;
    box-shadow: 0px 0px 12px rgba(205,133,63,0.4);
}

/* PANIC SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #DEB887, stop:0.3 #CD853F, stop:0.7 #A0522D, stop:1 #DEB887);
    width: 24px;
    border-radius: 12px;
    border: 4px solid #8B4513;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #654321 40%, #5D4037 80%);
    border-radius: 10px;
    min-height: 35px;
    border: 3px solid #8B4513;
    margin: 4px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #8B4513 30%, #654321 70%);
    box-shadow: 0px 0px 12px rgba(139,69,19,0.5);
}

/* EMERGENCY EXIT MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #A0522D, stop:0.3 #CD853F, stop:0.7 #DEB887, stop:1 #A0522D);
    color: #F5DEB3;
    border-bottom: 5px solid #654321;
    font-weight: bold;
    font-size: 15px;
    border-radius: 0px 0px 25px 45px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #F4A460 40%, #D2691E 80%);
    color: #FFFACD;
    border-radius: 20px 40px 15px 35px;
    padding: 12px 20px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFFACD, stop:0.25 #F5DEB3, stop:0.5 #DEB887, 
                stop:0.75 #CD853F, stop:1 #FFFACD);
    color: #8B4513;
    border: 5px solid #A0522D;
    border-radius: 30px 50px 25px 55px;
    font-size: 14px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #D2691E 30%, #A0522D 70%);
    color: #F5DEB3;
    border-radius: 15px 35px 20px 40px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #654321, stop:0.4 #8B4513, stop:0.8 #A0522D, stop:1 #654321);
    color: #F5DEB3;
    border-top: 5px solid #5D4037;
    font-weight: bold;
    font-size: 13px;
    border-radius: 45px 35px 0px 0px;
}

/* SUSPICIOUS STAIN PATTERN */
QLabel#suspiciousStains {
    background: qradial-gradient(ellipse at 20% 30%, #8B4513 15%, transparent 16%),
                qradial-gradient(ellipse at 65% 20%, #654321 12%, transparent 13%),
                qradial-gradient(ellipse at 40% 70%, #A0522D 18%, transparent 19%),
                qradial-gradient(ellipse at 80% 60%, #5D4037 14%, transparent 15%),
                qradial-gradient(ellipse at 15% 80%, #8B4513 20%, transparent 21%),
                qradial-gradient(ellipse at 70% 85%, #654321 16%, transparent 17%),
                #DEB887;
    color: #F5DEB3;
    border: 4px solid #8B4513;
    border-radius: 25px 45px 30px 50px;
    padding: 18px;
    font-weight: bold;
    font-size: 14px;
}

/* SHAMEFUL WALK EFFECT */
QWidget#shamefulWalk {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #F5DEB3, stop:0.2 #DEB887, stop:0.4 #CD853F, 
                stop:0.6 #A0522D, stop:0.8 #8B4513, stop:1 #654321);
    border: 3px solid #5D4037;
    border-radius: 10px 40px 20px 50px;
}

/* EMERGENCY ALERT */
QLabel#emergencyAlert {
    background: qradial-gradient(circle at 50% 50%, #DC143C 20%, #8B0000 50%, #654321 80%);
    color: #FFFACD;
    border: 6px solid #FF0000;
    border-radius: 15px 50px 25px 60px;
    padding: 22px;
    font-weight: bold;
    font-size: 18px;
    font-family: "Impact", sans-serif;
    text-align: center;
}

/* TOILET PAPER DISPENSER */
QLabel#toiletPaperDispenser {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FFFACD, stop:0.2 #F5DEB3, stop:0.4 #FFFACD, 
                stop:0.6 #F5DEB3, stop:0.8 #FFFACD, stop:1 #F5DEB3);
    color: #8B4513;
    border: 4px solid #CD853F;
    border-radius: 80px 80px 20px 20px; /* TP roll shape */
    padding: 15px;
    font-weight: bold;
    font-size: 13px;
}

/* WALK OF SHAME FOOTPRINTS */
QWidget#walkOfShame {
    background: qradial-gradient(ellipse at 20% 20%, #8B4513 8%, transparent 9%),
                qradial-gradient(ellipse at 30% 40%, #654321 10%, transparent 11%),
                qradial-gradient(ellipse at 50% 60%, #8B4513 8%, transparent 9%),
                qradial-gradient(ellipse at 60% 80%, #654321 10%, transparent 11%),
                qradial-gradient(ellipse at 80% 30%, #8B4513 8%, transparent 9%),
                qradial-gradient(ellipse at 90% 50%, #654321 10%, transparent 11%),
                #F5DEB3;
    border: 3px solid #A0522D;
    border-radius: 20px;
}