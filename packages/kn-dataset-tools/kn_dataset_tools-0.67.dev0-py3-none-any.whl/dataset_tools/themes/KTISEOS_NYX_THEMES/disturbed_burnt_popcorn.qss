/* DISTURBED IDEA: BURNT POPCORN */
/* A theme with dark, charred browns and blacks, with hints of sickly yellow, evoking the smell and sight of burnt popcorn. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 0.3 #000000,
                                stop: 0.7 #8B4513, stop: 1 #2F2F2F);
    color: #F5DEB3;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 0.3 #000000,
                                stop: 0.7 #8B4513, stop: 1 #2F2F2F);
    color: #F5DEB3;
    font-family: 'Impact', sans-serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DAA520, stop: 1 #B8860B);
    border: 3px solid #F5DEB3;
    border-radius: 5px;
    padding: 10px 15px;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B8860B, stop: 1 #DAA520);
    border: 3px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 5px;
    padding: 8px;
    color: #2F2F2F;
    selection-background-color: #DAA520;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #2F2F2F;
}

QListWidget::item:selected {
    background: #DAA520;
    color: #000000;
}
