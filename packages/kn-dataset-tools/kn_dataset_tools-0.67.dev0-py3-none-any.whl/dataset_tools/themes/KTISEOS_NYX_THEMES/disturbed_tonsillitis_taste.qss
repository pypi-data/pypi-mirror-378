/* DISTURBED TONSILLITIS TASTE INSPIRED THEME */
/* That awful metallic, pus-filled, swollen throat sensation with white patches */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffe4e1, stop: 0.3 #ffb6c1,
                                stop: 0.6 #dc143c, stop: 1 #8b0000);
    color: #2f1b14;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffe4e1, stop: 0.3 #ffb6c1,
                                stop: 0.6 #dc143c, stop: 1 #8b0000);
    color: #2f1b14;
    font-size: 13px;
    font-weight: bold;
}

/* Swollen throat buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.3 #fff8dc,
                                stop: 0.7 #ffb6c1, stop: 1 #dc143c);
    border: 3px outset #b22222;
    border-radius: 6px;
    padding: 10px 16px;
    color: #8b0000;
    min-height: 16px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #fffafa, stop: 0.3 #ffe4e1,
                                stop: 0.7 #ffc0cb, stop: 1 #ff69b4);
    border: 3px outset #dc143c;
    color: #2f1b14;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 0.3 #b22222,
                                stop: 0.7 #8b0000, stop: 1 #2f0000);
    border: 3px inset #b22222;
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f0f0f0, stop: 1 #e0e0e0);
    border: 3px outset #d0d0d0;
    color: #808080;
}

/* Infected tonsil text areas */
QTextEdit, QPlainTextEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #fff8dc,
                                stop: 1 #fffacd);
    border: 3px inset #dc143c;
    border-radius: 6px;
    padding: 12px;
    color: #8b0000;
    selection-background-color: #ffb6c1;
    selection-color: #2f1b14;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 3px inset #b22222;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #fffafa,
                                stop: 1 #fff8dc);
}

/* Pus pocket lists */
QListWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #fff8dc,
                                stop: 1 #fffacd);
    border: 3px inset #dc143c;
    border-radius: 6px;
    alternate-background-color: #ffe4e1;
    color: #8b0000;
    gridline-color: #ffb6c1;
    outline: none;
}

QListWidget::item {
    padding: 8px 12px;
    border-bottom: 2px solid #ffb6c1;
    border-radius: 4px;
    margin: 2px;
}

QListWidget::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #b22222);
    color: #ffffff;
    border-radius: 6px;
    border: 2px solid #8b0000;
    font-weight: bold;
}

QListWidget::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffb6c1, stop: 1 #ffc0cb);
    color: #2f1b14;
    border-radius: 6px;
}

/* Sore throat menu */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #8b0000);
    color: #fffafa;
    border-bottom: 3px outset #b22222;
    font-weight: bold;
}

QMenuBar::item {
    background: transparent;
    padding: 8px 14px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    color: #ffffff;
    border: 2px outset #ffb6c1;
}

QMenu {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
    border: 3px outset #dc143c;
    border-radius: 6px;
    padding: 6px;
}

QMenu::item {
    padding: 8px 20px;
    border-radius: 4px;
    margin: 2px;
    color: #8b0000;
}

QMenu::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #b22222);
    color: #ffffff;
}

/* Inflamed scrollbars */
QScrollBar:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #8b0000, stop: 1 #dc143c);
    width: 16px;
    border: 3px outset #b22222;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ffffff, stop: 0.5 #ffb6c1,
                                stop: 1 #dc143c);
    border: 3px outset #ff69b4;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #fffafa, stop: 0.5 #ffc0cb,
                                stop: 1 #ff69b4);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #8b0000, stop: 1 #dc143c);
    height: 16px;
    border: 3px outset #b22222;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #ffb6c1,
                                stop: 1 #dc143c);
    border: 3px outset #ff69b4;
    border-radius: 6px;
    min-width: 30px;
}

/* Painful tabs */
QTabWidget::pane {
    border: 3px outset #dc143c;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
    border-radius: 6px;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #8b0000);
    border: 3px outset #b22222;
    padding: 10px 18px;
    margin-right: 3px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    font-weight: bold;
    color: #fffafa;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    border: 3px outset #ffb6c1;
    border-bottom: none;
    color: #ffffff;
}

QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    border: 3px outset #ffc0cb;
    color: #fff8dc;
}

/* Fever status bar */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #8b0000);
    border-top: 3px outset #b22222;
    color: #fffafa;
    font-weight: bold;
}

/* Strep throat input fields */
QLineEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fffafa);
    border: 3px inset #dc143c;
    border-radius: 4px;
    padding: 8px;
    color: #8b0000;
    selection-background-color: #ffb6c1;
    selection-color: #2f1b14;
}

QLineEdit:focus {
    border: 3px inset #b22222;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
}

/* Antibiotic combo boxes */
QComboBox {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dc143c, stop: 1 #8b0000);
    border: 3px outset #b22222;
    border-radius: 4px;
    padding: 8px;
    color: #fffafa;
    min-width: 80px;
    font-weight: bold;
}

QComboBox:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    border: 3px outset #ffb6c1;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 8px solid #fffafa;
}

QComboBox QAbstractItemView {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
    border: 3px outset #dc143c;
    border-radius: 4px;
    selection-background-color: #ffb6c1;
    selection-color: #2f1b14;
    color: #8b0000;
}

/* Recovery progress bars */
QProgressBar {
    border: 3px inset #dc143c;
    border-radius: 4px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
    text-align: center;
    color: #8b0000;
    font-weight: bold;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ffffff, stop: 0.3 #ffb6c1,
                                stop: 0.7 #ff69b4, stop: 1 #dc143c);
    border-radius: 2px;
    margin: 1px;
}

/* Pharyngitis tooltips */
QToolTip {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
    border: 3px outset #ffb6c1;
    color: #8b0000;
    padding: 8px 12px;
    border-radius: 4px;
    font-weight: bold;
}

/* Additional sore styling */
QLabel {
    color: #2f1b14;
    font-weight: bold;
}

QGroupBox {
    border: 3px outset #dc143c;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: bold;
    color: #8b0000;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 12px 0 12px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    color: #ffffff;
    font-weight: bold;
    border-radius: 4px;
    border: 2px outset #b22222;
}

QCheckBox {
    color: #2f1b14;
    font-weight: bold;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    border: 2px inset #b22222;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fff8dc);
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #ff69b4, stop: 1 #dc143c);
    border: 2px outset #ffb6c1;
}

QCheckBox::indicator:hover {
    border: 2px inset #dc143c;
}
