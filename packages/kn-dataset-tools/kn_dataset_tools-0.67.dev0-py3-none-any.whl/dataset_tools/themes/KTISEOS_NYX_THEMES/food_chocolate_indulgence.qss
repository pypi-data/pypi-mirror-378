/* FOOD: CHOCOLATE INDULGENCE THEME */
/* Inspired by rich chocolates - deep browns, creamy whites, and hints of gold. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3E2723, stop: 0.3 #5D4037,
                                stop: 0.7 #795548, stop: 1 #3E2723);
    color: #F5F5DC;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3E2723, stop: 0.3 #5D4037,
                                stop: 0.7 #795548, stop: 1 #3E2723);
    color: #F5F5DC;
    font-size: 12px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 1 #DAA520);
    border: 2px solid #3E2723;
    border-radius: 5px;
    padding: 8px 12px;
    color: #3E2723;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DAA520, stop: 1 #FFD700);
    border: 2px solid #5D4037;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #795548, stop: 1 #5D4037);
    border: 2px inset #3E2723;
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #696969, stop: 1 #2F4F4F);
    border: 2px solid #708090;
    color: #DCDCDC;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #5D4037;
    border-radius: 3px;
    padding: 5px;
    color: #3E2723;
    selection-background-color: #795548;
    selection-color: #FFFFFF;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #3E2723;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #5D4037;
    border-radius: 3px;
    alternate-background-color: #F5F5DC;
    color: #3E2723;
    gridline-color: #795548;
    outline: none;
}

QListWidget::item {
    padding: 5px 8px;
    border-bottom: 1px solid #D0D0D0;
}

QListWidget::item:selected {
    background: #795548;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background: #F5F5DC;
}

QMenuBar {
    background: #5D4037;
    color: #F5F5DC;
    border-bottom: 1px solid #795548;
}

QMenuBar::item {
    background: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background: #795548;
}

QMenu {
    background: #5D4037;
    border: 1px solid #795548;
    padding: 3px;
}

QMenu::item {
    padding: 5px 15px;
    color: #F5F5DC;
}

QMenu::item:selected {
    background: #795548;
}

QScrollBar:vertical {
    background: #5D4037;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #795548;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: #5D4037;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #795548;
    border-radius: 5px;
}

QTabWidget::pane {
    border: 1px solid #795548;
    background: #FFFFFF;
}

QTabBar::tab {
    background: #5D4037;
    border: 1px solid #795548;
    padding: 6px 10px;
    color: #F5F5DC;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    color: #3E2723;
}

QTabBar::tab:hover:!selected {
    background: #795548;
}

QStatusBar {
    background: #5D4037;
    border-top: 1px solid #795548;
    color: #F5F5DC;
}

QLineEdit {
    background: #FFFFFF;
    border: 2px solid #5D4037;
    border-radius: 3px;
    padding: 5px;
    color: #3E2723;
    selection-background-color: #795548;
    selection-color: #FFFFFF;
}

QLineEdit:focus {
    border: 2px solid #3E2723;
}

QComboBox {
    background: #5D4037;
    border: 2px solid #795548;
    border-radius: 3px;
    padding: 4px;
    color: #F5F5DC;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 18px;
    border-left: 1px solid #795548;
}

QComboBox::down-arrow {
    image: none;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 6px solid #F5F5DC;
}

QComboBox QAbstractItemView {
    background: #5D4037;
    border: 1px solid #795548;
    selection-background-color: #795548;
    color: #F5F5DC;
}

QSplitter::handle {
    background: #795548;
    border: 1px solid #F5F5DC;
}

QSplitter::handle:horizontal {
    width: 4px;
}

QSplitter::handle:vertical {
    height: 4px;
}

QProgressBar {
    border: 2px solid #5D4037;
    border-radius: 3px;
    background: #FFFFFF;
    text-align: center;
    color: #3E2723;
}

QProgressBar::chunk {
    background: #795548;
    border-radius: 2px;
}

QToolTip {
    background: #5D4037;
    border: 1px solid #795548;
    color: #F5F5DC;
    padding: 4px;
    border-radius: 3px;
}

QLabel {
    color: #F5F5DC;
}

QGroupBox {
    border: 2px solid #795548;
    border-radius: 5px;
    margin-top: 8px;
    padding-top: 8px;
    color: #F5F5DC;
    background: #FFFFFF;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 4px 0 4px;
    background: #795548;
    color: #FFFFFF;
    border-radius: 2px;
}

QCheckBox {
    color: #F5F5DC;
}

QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border-radius: 3px;
    border: 1px solid #5D4037;
    background: #FFFFFF;
}

QCheckBox::indicator:checked {
    background: #795548;
}
