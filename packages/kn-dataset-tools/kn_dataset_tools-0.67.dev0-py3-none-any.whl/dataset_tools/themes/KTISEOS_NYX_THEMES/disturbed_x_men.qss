/* DISTURBED IDEA: X-MEN */
/* A bold, heroic theme with blues, yellows, and reds, reflecting the classic X-Men colors. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #00008B, stop: 0.3 #FFD700,
                                stop: 0.7 #B22222, stop: 1 #00008B);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #00008B, stop: 0.3 #FFD700,
                                stop: 0.7 #B22222, stop: 1 #00008B);
    color: #FFFFFF;
    font-family: 'Impact', sans-serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 1 #B22222);
    border: 3px solid #00008B;
    border-radius: 5px;
    padding: 10px 15px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B22222, stop: 1 #FFD700);
    border: 3px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #00008B;
    border-radius: 5px;
    padding: 8px;
    color: #B22222;
    selection-background-color: #FFD700;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #00008B;
    border-radius: 5px;
    alternate-background-color: #F0F0F0;
    color: #B22222;
}

QListWidget::item:selected {
    background: #FFD700;
    color: #00008B;
}
