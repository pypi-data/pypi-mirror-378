/*
Mom's 2AM Fever Dreams Collection - "Politicians Toilet"
Where democracy goes to die
C-SPAN has refused to cover this theme
*/

QWidget {
    background-color: #2F4F4F; /* Dark slate gray base */
    color: #F5F5DC; /* Beige text */
    font-family: "Times New Roman", serif;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #708090, stop:0.2 #2F4F4F, stop:0.4 #696969, 
                stop:0.6 #8B4513, stop:0.8 #A0522D, stop:1 #708090);
}

/* CORRUPT PODIUM BUTTONS! */
QPushButton {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #C0C0C0, stop:0.3 #A9A9A9, stop:0.7 #696969, stop:1 #2F4F4F);
    color: #000000;
    border: 4px solid #8B4513;
    border-radius: 10px 50px 5px 45px; /* Crooked podium shape! */
    padding: 18px 26px;
    font-weight: bold;
    font-size: 14px;
    box-shadow: inset 0px 0px 10px rgba(139,69,19,0.4);
    transform: rotate(-2deg); /* Slightly crooked like politics */
}

QPushButton:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFD700, stop:0.4 #DAA520, stop:0.8 #B8860B, stop:1 #8B7355);
    border-color: #654321;
    border-radius: 15px 60px 8px 55px; /* More corrupt when hovered */
    box-shadow: 0px 0px 25px rgba(255,215,0,0.7), inset 0px 0px 8px rgba(101,67,33,0.5);
    color: #2F1B14;
    transform: rotate(-4deg) scale(1.06); /* More crooked and bigger */
}

QPushButton:pressed {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #8B4513, stop:0.5 #654321, stop:1 #2F1B14);
    border-radius: 5px 40px 3px 35px; /* Collapsed podium */
    border-color: #2F1B14;
    transform: rotate(-6deg) scale(0.88);
    box-shadow: inset 0px 0px 18px rgba(47,27,20,0.8);
}

/* BALLOT BOX TEXT FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #F5F5DC, stop:0.3 #E6E6FA, stop:0.7 #D3D3D3, stop:1 #F5F5DC);
    color: #2F4F4F;
    border: 4px solid #696969;
    border-radius: 25px 25px 60px 60px; /* Ballot box shape */
    padding: 14px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #DC143C;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFE4E1, stop:0.4 #FFC0CB, stop:0.8 #FFB6C1, stop:1 #FFE4E1);
    border-radius: 35px 35px 70px 70px; /* Suspicious ballot box */
    box-shadow: 0px 0px 15px rgba(220,20,60,0.5);
    color: #8B0000;
}

/* CONGRESS SEAT TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 60%, #8B0000 30%, #654321 60%, #2F1B14 90%);
    border: 5px solid #A0522D;
    border-radius: 30px 30px 80px 80px; /* Congressional seat shape! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #DC143C, stop:0.4 #B22222, stop:0.8 #8B0000, stop:1 #4A0000);
    color: #F5F5DC;
    padding: 16px 28px;
    margin: 4px;
    border-radius: 20px 40px 0px 0px; /* Political party tabs */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #2F1B14;
}

QTabBar::tab:selected {
    background: qradial-gradient(ellipse at 50% 40%, #FFD700 40%, #DAA520 80%);
    color: #8B4513;
    border-radius: 30px 50px 0px 0px; /* Bought and paid for tab */
    border-color: #B8860B;
    box-shadow: 0px 0px 15px rgba(255,215,0,0.5);
}

/* SEWAGE SYSTEM SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #696969, stop:0.3 #2F4F4F, stop:0.7 #1C1C1C, stop:1 #696969);
    width: 28px;
    border-radius: 14px;
    border: 4px solid #8B4513;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #8B4513 40%, #654321 80%);
    border-radius: 12px;
    min-height: 40px;
    border: 3px solid #A0522D;
    margin: 4px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #A0522D 30%, #8B4513 70%);
    box-shadow: 0px 0px 12px rgba(160,82,45,0.6);
}

/* CAPITOL BUILDING MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #2F4F4F, stop:0.3 #696969, stop:0.7 #A9A9A9, stop:1 #2F4F4F);
    color: #F5F5DC;
    border-bottom: 5px solid #1C1C1C;
    font-weight: bold;
    font-size: 15px;
    border-radius: 0px 0px 40px 60px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #FFD700 40%, #DAA520 80%);
    color: #8B4513;
    border-radius: 25px 45px 20px 40px;
    padding: 12px 22px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #F5F5DC, stop:0.25 #E6E6FA, stop:0.5 #D3D3D3, 
                stop:0.75 #C0C0C0, stop:1 #F5F5DC);
    color: #2F4F4F;
    border: 5px solid #696969;
    border-radius: 35px 55px 30px 60px;
    font-size: 14px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #8B4513 30%, #654321 70%);
    color: #F5F5DC;
    border-radius: 20px 40px 25px 45px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #1C1C1C, stop:0.4 #2F4F4F, stop:0.8 #696969, stop:1 #1C1C1C);
    color: #F5F5DC;
    border-top: 5px solid #000000;
    font-weight: bold;
    font-size: 13px;
    border-radius: 60px 50px 0px 0px;
}

/* CORRUPTION STAIN PATTERN */
QLabel#corruptionStains {
    background: qradial-gradient(ellipse at 25% 30%, #8B4513 18%, transparent 19%),
                qradial-gradient(ellipse at 70% 25%, #654321 15%, transparent 16%),
                qradial-gradient(ellipse at 40% 75%, #A0522D 22%, transparent 23%),
                qradial-gradient(ellipse at 80% 70%, #2F1B14 12%, transparent 13%),
                qradial-gradient(ellipse at 15% 80%, #8B4513 20%, transparent 21%),
                #D3D3D3;
    color: #2F4F4F;
    border: 4px solid #696969;
    border-radius: 25px 50px 30px 60px;
    padding: 18px;
    font-weight: bold;
    font-size: 14px;
}

/* MONEY TRAIL EFFECT */
QWidget#moneyTrail {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #228B22, stop:0.1 #32CD32, stop:0.2 #228B22, 
                stop:0.3 #00FF00, stop:0.4 #228B22, stop:0.5 #32CD32,
                stop:0.6 #228B22, stop:0.7 #00FF00, stop:0.8 #228B22, 
                stop:0.9 #32CD32, stop:1 #228B22);
    border: 3px solid #006400;
    border-radius: 20px 40px 30px 50px;
    color: #F0FFF0;
    font-weight: bold;
}

/* SPIN CYCLE INDICATOR */
QLabel#spinCycle {
    background: qradial-gradient(circle at 50% 50%, #FF6347 20%, #DC143C 50%, #8B0000 80%);
    color: #FFFFFF;
    border: 6px solid #B22222;
    border-radius: 100px; /* Perfect spin cycle */
    padding: 25px;
    font-weight: bold;
    font-size: 18px;
    font-family: "Impact", sans-serif;
    text-align: center;
    transform: rotate(45deg); /* Always spinning */
}

/* LOBBYIST BRIEFCASE */
QLabel#lobbyistBriefcase {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #8B4513, stop:0.3 #A0522D, stop:0.7 #CD853F, stop:1 #8B4513);
    color: #F5DEB3;
    border: 3px solid #654321;
    border-radius: 15px 50px 20px 45px;
    padding: 15px 25px;
    font-weight: bold;
    font-size: 13px;
}

/* FILIBUSTER EFFECT */
QWidget#filibuster {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #2F4F4F, stop:0.25 #696969, stop:0.5 #A9A9A9, 
                stop:0.75 #696969, stop:1 #2F4F4F);
    border: 4px solid #1C1C1C;
    border-radius: 80px 5px 70px 10px; /* Endless rambling shape */
    color: #F5F5DC;
    font-weight: bold;
    font-size: 12px;
}