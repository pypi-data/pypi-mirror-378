/* STUPID IDEA: STATIC NOISE */
/* A black and white theme with jarring, pixelated patterns, simulating static. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #000000, stop: 0.1 #FFFFFF,
                                stop: 0.2 #000000, stop: 0.3 #FFFFFF,
                                stop: 0.4 #000000, stop: 0.5 #FFFFFF,
                                stop: 0.6 #000000, stop: 0.7 #FFFFFF,
                                stop: 0.8 #000000, stop: 0.9 #FFFFFF,
                                stop: 1 #000000);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #000000, stop: 0.1 #FFFFFF,
                                stop: 0.2 #000000, stop: 0.3 #FFFFFF,
                                stop: 0.4 #000000, stop: 0.5 #FFFFFF,
                                stop: 0.6 #000000, stop: 0.7 #FFFFFF,
                                stop: 0.8 #000000, stop: 0.9 #FFFFFF,
                                stop: 1 #000000);
    color: #FFFFFF;
    font-size: 16px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFFFF, stop: 1 #000000);
    border: 5px solid #FF0000;
    border-radius: 0px;
    padding: 20px 30px;
    color: #FF0000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000000, stop: 1 #FFFFFF);
    border: 5px solid #00FF00;
}

QTextEdit, QPlainTextEdit {
    background-color: #000000;
    color: #FFFFFF;
    border: 5px solid #FF0000;
    border-radius: 0px;
    padding: 15px;
}

QListWidget {
    background-color: #FFFFFF;
    color: #000000;
    border: 5px solid #00FF00;
    border-radius: 0px;
}

QListWidget::item:selected {
    background-color: #FF0000;
    color: #FFFFFF;
}
