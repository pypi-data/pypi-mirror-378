/* DISTURBED IDEA: CHARIZARD (HIGHLIGHTER MURDERED) */
/* Charizard's fiery orange, but assaulted by neon blue and yellow highlighters. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF4500, stop: 0.5 #00BFFF,
                                stop: 1 #FFFF00);
    color: #000000;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF4500, stop: 0.5 #00BFFF,
                                stop: 1 #FFFF00);
    color: #000000;
    font-family: 'Impact', sans-serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #00BFFF, stop: 1 #FFFF00);
    border: 3px solid #FF4500;
    border-radius: 5px;
    padding: 10px 15px;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 1 #00BFFF);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #000000;
    border: 2px solid #FF4500;
    border-radius: 5px;
    padding: 8px;
    color: #00BFFF;
    selection-background-color: #FFFF00;
    selection-color: #000000;
}

QListWidget {
    background: #000000;
    border: 2px solid #FF4500;
    border-radius: 5px;
    alternate-background-color: #00BFFF;
    color: #FFFF00;
}

QListWidget::item:selected {
    background: #FF4500;
    color: #000000;
}
