/* LINUX DISTRO: MANDRIVA THEME */
/* Inspired by Mandriva Linux's blue and white branding. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0056B3, stop: 0.3 #007BFF,
                                stop: 0.7 #ADD8E6, stop: 1 #0056B3);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0056B3, stop: 0.3 #007BFF,
                                stop: 0.7 #ADD8E6, stop: 1 #0056B3);
    color: #FFFFFF;
    font-size: 12px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #007BFF, stop: 1 #0056B3);
    border: 2px solid #FFFFFF;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0056B3, stop: 1 #007BFF);
    border: 2px solid #E0E0E0;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #007BFF;
    border-radius: 3px;
    padding: 5px;
    color: #0056B3;
    selection-background-color: #007BFF;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #007BFF;
    border-radius: 3px;
    alternate-background-color: #F0F8FF;
    color: #0056B3;
}

QListWidget::item:selected {
    background: #007BFF;
    color: #FFFFFF;
}
