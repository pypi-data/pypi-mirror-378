/* FFXIV: GOSETSU THEME */
/* Earthy browns, grays, and a touch of red, reflecting Gosetsu's stoic and honorable character. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4B3621, stop: 0.3 #696969,
                                stop: 0.7 #8B4513, stop: 1 #4B3621);
    color: #F5F5DC;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4B3621, stop: 0.3 #696969,
                                stop: 0.7 #8B4513, stop: 1 #4B3621);
    color: #F5F5DC;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DC143C, stop: 1 #B22222);
    border: 2px solid #F5F5DC;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #B22222, stop: 1 #DC143C);
    border: 2px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #4B3621;
    border-radius: 3px;
    padding: 5px;
    color: #696969;
    selection-background-color: #8B4513;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #4B3621;
    border-radius: 3px;
    alternate-background-color: #F0F0F0;
    color: #696969;
}

QListWidget::item:selected {
    background: #8B4513;
    color: #FFFFFF;
}
