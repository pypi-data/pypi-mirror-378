/* THE BRIGHTEST YELLOW IDEAS POSSIBLE THEME */
/* A theme dominated by blindingly bright yellows, with minimal contrast to maximize eye strain. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 0.5 #FFFACD,
                                stop: 1 #FFD700);
    color: #8B8B00;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 0.5 #FFFACD,
                                stop: 1 #FFD700);
    color: #8B8B00;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFD700, stop: 1 #FFFF00);
    border: 3px solid #8B8B00;
    border-radius: 5px;
    padding: 10px 15px;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 1 #FFD700);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #FFFF00;
    border-radius: 5px;
    padding: 8px;
    color: #8B8B00;
    selection-background-color: #FFD700;
    selection-color: #000000;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #FFFF00;
    border-radius: 5px;
    alternate-background-color: #FFFACD;
    color: #8B8B00;
}

QListWidget::item:selected {
    background: #FFD700;
    color: #000000;
}
