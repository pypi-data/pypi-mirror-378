/* FFXIV: EMET SELCH THEME */
/* Dark, elegant purples, blacks, and golds, reflecting Emet Selch's sophisticated and tragic character. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 0.3 #4B0082,
                                stop: 0.7 #8B008B, stop: 1 #2F2F2F);
    color: #FFD700;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 0.3 #4B0082,
                                stop: 0.7 #8B008B, stop: 1 #2F2F2F);
    color: #FFD700;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #8B008B, stop: 1 #4B0082);
    border: 2px solid #FFD700;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4B0082, stop: 1 #8B008B);
    border: 2px solid #FFFFFF;
}

QTextEdit, QPlainTextEdit {
    background: #000000;
    border: 2px solid #4B0082;
    border-radius: 3px;
    padding: 5px;
    color: #FFD700;
    selection-background-color: #8B008B;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #000000;
    border: 2px solid #4B0082;
    border-radius: 3px;
    alternate-background-color: #1A1A1A;
    color: #FFD700;
}

QListWidget::item:selected {
    background: #8B008B;
    color: #FFFFFF;
}
