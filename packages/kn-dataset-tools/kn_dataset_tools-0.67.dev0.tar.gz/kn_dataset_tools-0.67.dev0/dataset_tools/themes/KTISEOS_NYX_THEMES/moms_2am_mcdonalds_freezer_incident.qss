/*
Mom's 2AM Fever Dreams Collection - "Masturbation in the Freezer at McDonald's"
The most cursed workplace incident ever recorded
Health Department Rating: NOPE/10
*/

QWidget {
    background-color: #1E3A8A; /* Deep blue base */
    color: #FDE047; /* Yellow text */
    font-family: "Arial", sans-serif;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #1E40AF, stop:0.2 #1E3A8A, stop:0.4 #DC2626, 
                stop:0.6 #FDE047, stop:0.8 #1E3A8A, stop:1 #1E40AF);
}

/* FROZEN PATTY SHAPED BUTTONS! */
QPushButton {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #DBEAFE, stop:0.3 #93C5FD, stop:0.7 #3B82F6, stop:1 #1E40AF);
    color: #1E3A8A;
    border: 5px solid #DC2626; /* Red McDonald's border */
    border-radius: 50px 20px 45px 25px; /* Frozen patty shape! */
    padding: 15px 25px;
    font-weight: bold;
    font-size: 14px;
}

QPushButton:hover {
    background: qradial-gradient(circle at 40% 30%, #FEF3C7 20%, #FDE047 50%, #F59E0B 80%);
    border-color: #EF4444;
    border-radius: 30px 60px 25px 55px; /* Melting shape! */
    box-shadow: 0px 0px 20px #DC2626;
    color: #7C2D12;
}

QPushButton:pressed {
    background: qradial-gradient(circle at 60% 70%, #DBEAFE 30%, #60A5FA 70%);
    border-radius: 15px 40px 20px 35px; /* Squished frozen shape */
    border-color: #B91C1C;
    transform: scale(0.9);
}

/* FREEZER BURN TEXT FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #EFF6FF, stop:0.3 #DBEAFE, stop:0.7 #93C5FD, stop:1 #EFF6FF);
    color: #1E40AF;
    border: 4px solid #FDE047;
    border-radius: 20px 40px 30px 50px; /* Icy crystalline shape */
    padding: 12px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #DC2626;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FEF3C7, stop:0.5 #FDE047, stop:1 #FEF3C7);
    border-radius: 40px 20px 50px 30px; /* "Thawed" shape */
    box-shadow: 0px 0px 15px #F59E0B;
    color: #7C2D12;
}

/* GOLDEN ARCHES TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 30%, #FDE047 20%, #F59E0B 50%, #DC2626 80%);
    border: 5px solid #1E40AF;
    border-radius: 60px 60px 20px 20px; /* Golden arches shape! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FDE047, stop:0.5 #F59E0B, stop:1 #DC2626);
    color: #1E40AF;
    padding: 18px 30px;
    margin: 3px;
    border-radius: 50px 50px 0px 0px; /* Arch-shaped tabs! */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #7C2D12;
}

QTabBar::tab:selected {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #DBEAFE, stop:0.5 #93C5FD, stop:1 #3B82F6);
    color: #FDE047;
    border-radius: 60px 60px 0px 0px; /* Bigger arch when selected */
    border-color: #DC2626;
}

/* FREEZER COMPARTMENT SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #1E40AF, stop:0.3 #3B82F6, stop:0.7 #60A5FA, stop:1 #1E40AF);
    width: 25px;
    border-radius: 12px;
    border: 4px solid #FDE047;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #DC2626 30%, #EF4444 70%);
    border-radius: 10px;
    min-height: 35px;
    border: 3px solid #FDE047;
    margin: 3px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #FDE047 20%, #F59E0B 60%, #DC2626 90%);
    box-shadow: 0px 0px 12px #EF4444;
}

/* DRIVE-THRU MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #DC2626, stop:0.3 #EF4444, stop:0.7 #FDE047, stop:1 #DC2626);
    color: #1E40AF;
    border-bottom: 5px solid #F59E0B;
    font-weight: bold;
    font-size: 15px;
    border-radius: 0px 0px 30px 50px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #DBEAFE 30%, #93C5FD 70%);
    color: #FDE047;
    border-radius: 40px 20px 60px 30px;
    padding: 10px 20px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FEF3C7, stop:0.3 #FDE047, stop:0.7 #F59E0B, stop:1 #FEF3C7);
    color: #1E40AF;
    border: 5px solid #DC2626;
    border-radius: 40px 25px 50px 35px;
    font-size: 14px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #DBEAFE 40%, #60A5FA 80%);
    color: #FDE047;
    border-radius: 25px 45px 20px 40px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #F59E0B, stop:0.5 #DC2626, stop:1 #F59E0B);
    color: #DBEAFE;
    border-top: 5px solid #1E40AF;
    font-weight: bold;
    font-size: 13px;
    border-radius: 50px 30px 0px 0px;
}

/* HEALTH DEPARTMENT WARNING */
QLabel#healthWarning {
    background: qradial-gradient(circle at 50% 50%, #DC2626 30%, #7F1D1D 70%, #451A03 90%);
    color: #FDE047;
    border: 6px solid #EF4444;
    border-radius: 20px 60px 40px 80px; /* Irregular warning shape */
    padding: 20px;
    font-weight: bold;
    font-size: 16px;
    font-family: "Impact", sans-serif;
}

/* FROZEN CONDENSATION EFFECT */
QWidget#frozenSurface {
    background: qradial-gradient(ellipse at 20% 30%, #DBEAFE 10%, transparent 11%),
                qradial-gradient(ellipse at 70% 60%, #93C5FD 8%, transparent 9%),
                qradial-gradient(ellipse at 40% 80%, #60A5FA 12%, transparent 13%),
                qradial-gradient(ellipse at 80% 20%, #3B82F6 6%, transparent 7%),
                #1E40AF;
}

/* GOLDEN ARCHES SPECIAL ELEMENT */
QLabel#goldenArches {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FDE047, stop:0.5 #F59E0B, stop:1 #DC2626);
    color: #1E40AF;
    border: 4px solid #7C2D12;
    border-radius: 100px 100px 20px 20px; /* Perfect arch shape */
    padding: 25px;
    font-weight: bold;
    font-size: 18px;
    font-family: "Arial Black", sans-serif;
}