/* STUPID IDEA: MS PAINT PALETTE */
/* A theme using only the most garish colors from the default MS Paint palette. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF0000, stop: 0.2 #00FF00,
                                stop: 0.4 #0000FF, stop: 0.6 #FFFF00,
                                stop: 0.8 #FF00FF, stop: 1 #00FFFF);
    color: #000000;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF0000, stop: 0.2 #00FF00,
                                stop: 0.4 #0000FF, stop: 0.6 #FFFF00,
                                stop: 0.8 #FF00FF, stop: 1 #00FFFF);
    color: #000000;
    font-family: 'Times New Roman', serif;
    font-size: 14px;
}

QPushButton {
    background: #FF0000;
    border: 3px solid #0000FF;
    border-radius: 0px;
    padding: 15px 20px;
    color: #FFFF00;
    font-weight: bold;
}

QPushButton:hover {
    background: #00FF00;
}

QTextEdit, QPlainTextEdit {
    background-color: #FFFFFF;
    color: #FF00FF;
    border: 3px solid #00FFFF;
    border-radius: 0px;
    padding: 10px;
}

QListWidget {
    background-color: #000000;
    color: #FFFF00;
    border: 3px solid #FF0000;
    border-radius: 0px;
}

QListWidget::item:selected {
    background-color: #0000FF;
    color: #FFFFFF;
}
