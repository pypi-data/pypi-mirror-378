/* DISTURBED IDEA: PIKACHU (HIGHLIGHTER MURDERED) */
/* Pikachu's iconic yellow, but assaulted by neon pink and green highlighters. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 0.5 #FF69B4,
                                stop: 1 #39FF14);
    color: #000000;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFF00, stop: 0.5 #FF69B4,
                                stop: 1 #39FF14);
    color: #000000;
    font-family: 'Impact', sans-serif;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF69B4, stop: 1 #39FF14);
    border: 3px solid #FFFF00;
    border-radius: 5px;
    padding: 10px 15px;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #39FF14, stop: 1 #FF69B4);
    border: 3px solid #000000;
}

QTextEdit, QPlainTextEdit {
    background: #000000;
    border: 2px solid #FFFF00;
    border-radius: 5px;
    padding: 8px;
    color: #FF69B4;
    selection-background-color: #39FF14;
    selection-color: #000000;
}

QListWidget {
    background: #000000;
    border: 2px solid #FFFF00;
    border-radius: 5px;
    alternate-background-color: #FF69B4;
    color: #39FF14;
}

QListWidget::item:selected {
    background: #FFFF00;
    color: #000000;
}
