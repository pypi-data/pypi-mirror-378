/* GEOCITIES NIGHTMARE THEME */

/* Main window background */
QMainWindow {
    background-image: url("https://raw.githubusercontent.com/Ktiseos-Nyx/qss_themes/master/themes/assets/ss036.png");
    background-repeat: repeat;
}

/* Text areas with that classic Geocities feel */

/* General widget styling */
QWidget {

    font-size: 12pt;
    color: #FFD700;
    background-color: #000080;
}

/* Buttons with maximum 90s energy */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #ff0064, stop: 0.5 #ffff00, stop: 1 #00ff64);
    border: 3px outset #C0C0C0;
    border-radius: 0px;
    padding: 5px 15px;
    font-weight: bold;
    font-size: 14pt;
    color: #1a0033;
    text-transform: uppercase;

    letter-spacing: 1px;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #00ff64, stop: 0.5 #ffff00, stop: 1 #ff0064);
    border: 3px inset #C0C0C0;
    color: #0d1a33;
}

QPushButton:pressed {
    background-color: #ff00ff;
    border: 3px inset #808080;
    color: #0d1a33;
}

/* Text areas with that classic Geocities feel */
QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    color: #2d1b4d;
    border: 2px inset #C0C0C0;

    font-size: 10pt;
}

/* List widgets */
QListWidget {
    background-color: #ffffff;
    color: #2d1b4d;
    border: 2px inset #C0C0C0;
    alternate-background-color: #e0e0e0;

}

QListWidget::item:selected {
    background-color: #0064ff;
    color: #FFFFFF;
}

/* Menu bar */
QMenuBar {
    background-color: #c0c0c0;
    color: #2d1b4d;
    border-bottom: 2px outset #C0C0C0;

}

QMenuBar::item:selected {
    background-color: #0064ff;
    color: #FFFFFF;
}

/* Status bar */
QStatusBar {
    background-color: #c0c0c0;
    color: #2d1b4d;
    border-top: 2px outset #C0C0C0;

}

/* Scrollbars */
QScrollBar:vertical {
    background-color: #c0c0c0;
    width: 20px;
    border: 2px outset #C0C0C0;
}

QScrollBar::handle:vertical {
    background-color: #808080;
    border: 2px outset #C0C0C0;
    min-height: 20px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background-color: #c0c0c0;
    border: 2px outset #C0C0C0;
    height: 20px;
}