/* TOEJAM AND EARL THEME */
/* A funky, retro theme with bright, clashing colors and a pixelated feel. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF00FF, stop: 0.2 #FFFF00,
                                stop: 0.4 #00FFFF, stop: 0.6 #FF1493,
                                stop: 0.8 #00FF00, stop: 1 #FF0000);
    color: #000000;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #FF00FF, stop: 0.2 #FFFF00,
                                stop: 0.4 #00FFFF, stop: 0.6 #FF1493,
                                stop: 0.8 #00FF00, stop: 1 #FF0000);
    color: #000000;
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF0000, stop: 1 #00FF00);
    border: 5px solid #0000FF;
    border-radius: 0px;
    padding: 15px 25px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #00FF00, stop: 1 #FF0000);
    border: 5px solid #FFFF00;
}

QTextEdit, QPlainTextEdit {
    background-color: #000000;
    color: #FF00FF;
    border: 5px solid #00FFFF;
    border-radius: 0px;
    padding: 15px;
}

QListWidget {
    background-color: #000000;
    color: #FFFF00;
    border: 5px solid #FF1493;
    border-radius: 0px;
}

QListWidget::item:selected {
    background-color: #FF00FF;
    color: #000000;
}
