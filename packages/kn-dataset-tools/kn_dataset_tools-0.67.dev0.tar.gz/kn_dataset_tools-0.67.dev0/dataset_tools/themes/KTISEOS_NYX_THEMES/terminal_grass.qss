/* TERMINAL GRASS THEME */
/* Mimics a classic terminal look with a dark background and green text */

QMainWindow {
    background: #000000;
    color: #00FF00;
    border: none;
}

QWidget {
    background: #000000;
    color: #00FF00;
    font-size: 13px;
}

QPushButton {
    background: #004000;
    border: 1px solid #00FF00;
    border-radius: 3px;
    padding: 5px 10px;
    color: #00FF00;
}

QPushButton:hover {
    background: #006000;
}

QPushButton:pressed {
    background: #002000;
}

QPushButton:disabled {
    background: #303030;
    border: 1px solid #606060;
    color: #606060;
}

QTextEdit, QPlainTextEdit {
    background: #000000;
    border: 1px solid #00FF00;
    border-radius: 3px;
    padding: 5px;
    color: #00FF00;
    selection-background-color: #008000;
    selection-color: #FFFFFF;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #00FF00;
}

QListWidget {
    background: #000000;
    border: 1px solid #00FF00;
    border-radius: 3px;
    alternate-background-color: #001000;
    color: #00FF00;
    gridline-color: #004000;
    outline: none;
}

QListWidget::item {
    padding: 5px 8px;
    border-bottom: 1px solid #002000;
}

QListWidget::item:selected {
    background: #008000;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background: #002000;
}

QMenuBar {
    background: #000000;
    color: #00FF00;
    border-bottom: 1px solid #00FF00;
}

QMenuBar::item {
    background: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background: #004000;
}

QMenu {
    background: #000000;
    border: 1px solid #00FF00;
    padding: 3px;
}

QMenu::item {
    padding: 5px 15px;
    color: #00FF00;
}

QMenu::item:selected {
    background: #004000;
}

QScrollBar:vertical {
    background: #000000;
    width: 10px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #00FF00;
    border-radius: 4px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: #000000;
    height: 10px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: #00FF00;
    border-radius: 4px;
}

QTabWidget::pane {
    border: 1px solid #00FF00;
    background: #000000;
}

QTabBar::tab {
    background: #000000;
    border: 1px solid #00FF00;
    padding: 6px 10px;
    color: #00FF00;
}

QTabBar::tab:selected {
    background: #002000;
    color: #00FF00;
}

QTabBar::tab:hover:!selected {
    background: #001000;
}

QStatusBar {
    background: #000000;
    border-top: 1px solid #00FF00;
    color: #00FF00;
}

QLineEdit {
    background: #000000;
    border: 1px solid #00FF00;
    border-radius: 3px;
    padding: 5px;
    color: #00FF00;
    selection-background-color: #008000;
    selection-color: #FFFFFF;
}

QLineEdit:focus {
    border: 1px solid #00FF00;
}

QComboBox {
    background: #000000;
    border: 1px solid #00FF00;
    border-radius: 3px;
    padding: 4px;
    color: #00FF00;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 18px;
    border-left: 1px solid #00FF00;
}

QComboBox::down-arrow {
    image: none;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 6px solid #00FF00;
}

QComboBox QAbstractItemView {
    background: #000000;
    border: 1px solid #00FF00;
    selection-background-color: #008000;
    color: #00FF00;
}

QSplitter::handle {
    background: #00FF00;
    border: 1px solid #004000;
}

QSplitter::handle:horizontal {
    width: 4px;
}

QSplitter::handle:vertical {
    height: 4px;
}

QProgressBar {
    border: 1px solid #00FF00;
    border-radius: 3px;
    background: #000000;
    text-align: center;
    color: #00FF00;
}

QProgressBar::chunk {
    background: #00FF00;
    border-radius: 2px;
}

QToolTip {
    background: #000000;
    border: 1px solid #00FF00;
    color: #00FF00;
    padding: 4px;
    border-radius: 3px;
}

QLabel {
    color: #00FF00;
}

QGroupBox {
    border: 1px solid #00FF00;
    border-radius: 5px;
    margin-top: 8px;
    padding-top: 8px;
    color: #00FF00;
    background: #000000;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 4px 0 4px;
    background: #004000;
    color: #00FF00;
    border-radius: 2px;
}

QCheckBox {
    color: #00FF00;
}

QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border-radius: 3px;
    border: 1px solid #00FF00;
    background: #000000;
}

QCheckBox::indicator:checked {
    background: #00FF00;
}
