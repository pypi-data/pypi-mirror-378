/*
Mom's 2AM Fever Dreams Collection - "Stretch Mark Sweat"
The glistening reality of postpartum life
Embrace the tiger stripes and perspiration
*/

QWidget {
    background-color: #FFE4E1; /* Misty rose base */
    color: #8B475D; /* Pale violet red text */
    font-family: "Arial", sans-serif;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFE4E1, stop:0.15 #F5C2C7, stop:0.3 #E8A0BF, 
                stop:0.45 #DB7F8E, stop:0.6 #C85A5A, stop:0.75 #B85450, 
                stop:0.9 #A0474C, stop:1 #FFE4E1);
}

/* STRETCH MARK SHAPED BUTTONS! */
QPushButton {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FFF0F5, stop:0.2 #FFE4E1, stop:0.4 #F5C2C7, 
                stop:0.6 #E8A0BF, stop:0.8 #FFE4E1, stop:1 #FFF0F5);
    color: #8B475D;
    border: 3px solid #DB7F8E;
    border-radius: 5px 25px 8px 30px; /* Irregular stretch mark shape! */
    padding: 12px 20px;
    font-weight: bold;
    font-size: 13px;
    box-shadow: inset 0px 0px 8px rgba(219,127,142,0.3);
}

QPushButton:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FFB6C1, stop:0.3 #FFC0CB, stop:0.7 #F08080, stop:1 #FFB6C1);
    border-color: #CD5C5C;
    border-radius: 8px 35px 12px 40px; /* More pronounced stretch marks */
    box-shadow: 0px 0px 15px rgba(205,92,92,0.5), inset 0px 0px 5px rgba(139,71,93,0.4);
    color: #654321;
}

QPushButton:pressed {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #F5C2C7, stop:0.5 #E8A0BF, stop:1 #F5C2C7);
    border-radius: 3px 20px 6px 25px; /* Compressed stretch mark */
    border-color: #B85450;
    transform: scale(0.95);
    box-shadow: inset 0px 0px 12px rgba(184,84,80,0.6);
}

/* SWEATY TEXT FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFFAF0, stop:0.3 #FFF8DC, stop:0.7 #F5DEB3, stop:1 #FFFAF0);
    color: #8B4513;
    border: 4px solid #DDA0DD;
    border-radius: 15px 40px 20px 45px; /* Sweaty droplet shape */
    padding: 10px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #FF69B4;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFF0F5, stop:0.4 #FFE4E1, stop:0.8 #F5C2C7, stop:1 #FFF0F5);
    border-radius: 25px 50px 30px 55px; /* More sweaty when focused */
    box-shadow: 0px 0px 12px rgba(255,105,180,0.4);
    color: #8B475D;
}

/* MATERNITY BAND TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 40%, #FFF0F5 30%, #FFE4E1 60%, #F5C2C7 90%);
    border: 5px solid #DB7F8E;
    border-radius: 80px 80px 40px 40px; /* Belly-like curve! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFB6C1, stop:0.4 #FFC0CB, stop:0.8 #F08080, stop:1 #CD5C5C);
    color: #8B475D;
    padding: 14px 22px;
    margin: 3px;
    border-radius: 40px 15px 35px 20px; /* Belly band shape */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #DB7F8E;
}

QTabBar::tab:selected {
    background: qradial-gradient(ellipse at 50% 30%, #FFFAF0 40%, #FFF8DC 80%);
    color: #8B4513;
    border-radius: 50px 20px 45px 25px; /* Expanded belly band */
    border-color: #DDA0DD;
    box-shadow: 0px 0px 10px rgba(221,160,221,0.5);
}

/* GLISTENING SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #F5C2C7, stop:0.3 #E8A0BF, stop:0.7 #DB7F8E, stop:1 #F5C2C7);
    width: 22px;
    border-radius: 11px;
    border: 4px solid #FFB6C1;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #FF69B4 40%, #FF1493 80%);
    border-radius: 9px;
    min-height: 30px;
    border: 3px solid #DDA0DD;
    margin: 3px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #FFB6C1 30%, #FF69B4 70%);
    box-shadow: 0px 0px 10px rgba(255,105,180,0.6);
}

/* PREGNANCY GLOW MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #DB7F8E, stop:0.3 #E8A0BF, stop:0.7 #F5C2C7, stop:1 #DB7F8E);
    color: #8B475D;
    border-bottom: 5px solid #CD5C5C;
    font-weight: bold;
    font-size: 14px;
    border-radius: 0px 0px 30px 60px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #FFF0F5 40%, #FFE4E1 80%);
    color: #8B4513;
    border-radius: 20px 40px 15px 35px;
    padding: 10px 18px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFFAF0, stop:0.25 #FFF0F5, stop:0.5 #FFE4E1, 
                stop:0.75 #F5C2C7, stop:1 #FFFAF0);
    color: #8B475D;
    border: 5px solid #DB7F8E;
    border-radius: 25px 45px 20px 50px;
    font-size: 13px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #FFB6C1 30%, #F08080 70%);
    color: #FFFAF0;
    border-radius: 15px 35px 25px 30px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #CD5C5C, stop:0.4 #DB7F8E, stop:0.8 #E8A0BF, stop:1 #CD5C5C);
    color: #FFF0F5;
    border-top: 5px solid #B85450;
    font-weight: bold;
    font-size: 12px;
    border-radius: 50px 40px 0px 0px;
}

/* SWEAT DROPLET PATTERN */
QLabel#sweatDroplets {
    background: qradial-gradient(ellipse at 15% 20%, rgba(255,255,255,0.6) 8%, transparent 9%),
                qradial-gradient(ellipse at 60% 35%, rgba(255,255,255,0.5) 12%, transparent 13%),
                qradial-gradient(ellipse at 30% 70%, rgba(255,255,255,0.7) 10%, transparent 11%),
                qradial-gradient(ellipse at 80% 15%, rgba(255,255,255,0.4) 6%, transparent 7%),
                qradial-gradient(ellipse at 25% 90%, rgba(255,255,255,0.6) 14%, transparent 15%),
                qradial-gradient(ellipse at 85% 80%, rgba(255,255,255,0.5) 9%, transparent 10%),
                #F5C2C7;
    color: #8B475D;
    border: 4px solid #DB7F8E;
    border-radius: 20px 45px 25px 50px;
    padding: 16px;
    font-weight: bold;
    font-size: 14px;
}

/* TIGER STRIPE EFFECT */
QWidget#tigerStripes {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FFE4E1, stop:0.05 #F5C2C7, stop:0.1 #FFE4E1, 
                stop:0.15 #E8A0BF, stop:0.2 #FFE4E1, stop:0.25 #DB7F8E, 
                stop:0.3 #FFE4E1, stop:0.35 #F5C2C7, stop:0.4 #FFE4E1,
                stop:0.45 #E8A0BF, stop:0.5 #FFE4E1, stop:0.55 #DB7F8E,
                stop:0.6 #FFE4E1, stop:0.65 #F5C2C7, stop:0.7 #FFE4E1,
                stop:0.75 #E8A0BF, stop:0.8 #FFE4E1, stop:0.85 #DB7F8E,
                stop:0.9 #FFE4E1, stop:0.95 #F5C2C7, stop:1 #FFE4E1);
    border: 3px solid #CD5C5C;
    border-radius: 10px 30px 15px 35px;
}

/* PREGNANCY TEST RESULT */
QLabel#pregnancyTest {
    background: qradial-gradient(circle at 50% 50%, #FF1493 20%, #FF69B4 50%, #FFB6C1 80%);
    color: #FFFFFF;
    border: 6px solid #FF69B4;
    border-radius: 25px 25px 50px 50px;
    padding: 20px;
    font-weight: bold;
    font-size: 16px;
    font-family: "Impact", sans-serif;
    text-align: center;
}

/* COCOA BUTTER EFFECT */
QLabel#cocoaButter {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFFAF0, stop:0.3 #FFF8DC, stop:0.7 #F5DEB3, stop:1 #DEB887);
    color: #8B4513;
    border: 3px solid #CD853F;
    border-radius: 40px 20px 45px 25px; /* Lotion bottle shape */
    padding: 12px 18px;
    font-weight: bold;
    font-style: italic;
}