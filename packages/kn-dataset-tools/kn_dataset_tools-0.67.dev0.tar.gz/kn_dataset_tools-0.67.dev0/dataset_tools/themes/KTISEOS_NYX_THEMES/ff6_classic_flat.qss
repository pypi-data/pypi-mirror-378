/* Final Fantasy 6 Classic Flat Theme */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000020, stop: 0.5 #000080, stop: 1 #4040C0);
    color: #FFFFFF;
}

/* Flat Frames */
QFrame {
    background-color: #000040;
    border: 1px solid #4040A0;
}

/* Flat Menu Buttons */
QPushButton {
    background-color: #6060A0;
    border: 1px solid #8080C0;
    color: #FFFFFF;
    font-weight: bold;
    font-size: 11pt;
    padding: 6px 16px;
}

QPushButton:hover {
    background-color: #8080C0;
    color: #FFFF80;
}

QPushButton:pressed {
    background-color: #4040A0;
    border-color: #C0C0FF;
}

/* Flat List Selection */
QListWidget {
    background-color: #000020;
    border: 1px solid #4040A0;
    color: #FFFFFF;
    font-size: 10pt;
}

QListWidget::item {
    padding: 4px;
    border: none;
}

QListWidget::item:selected {
    background-color: #4040A0;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background-color: #404080;
    color: #FFFF80;
}

/* Text Areas */
QTextEdit, QPlainTextEdit {
    background-color: #000020;
    border: 1px solid #4040A0;
    color: #FFFFFF;
    selection-background-color: #8080FF;
    selection-color: #000000;
}

/* Menu Bar */
QMenuBar {
    background-color: #6060A0;
    border-bottom: 1px solid #202060;
    color: #FFFFFF;
    font-weight: bold;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #8080FF;
    color: #FFFF80;
}

QMenu {
    background-color: #000040;
    border: 1px solid #4040A0;
    color: #FFFFFF;
}

QMenu::item {
    padding: 4px 20px;
}

QMenu::item:selected {
    background-color: #8080FF;
    color: #FFFF80;
}

/* Status Bar */
QStatusBar {
    background-color: #4040A0;
    border-top: 1px solid #8080C0;
    color: #FFFFFF;
    font-weight: bold;
}

/* Scrollbars */
QScrollBar:vertical {
    background-color: #202060;
    width: 16px;
    border: 1px solid #4040A0;
}

QScrollBar::handle:vertical {
    background-color: #6060A0;
    border: 1px solid #C0C0FF;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #8080C0;
}
