/*
Mom's 2AM Fever Dreams Collection - "Aromatic Fart"
When gas becomes a fragrant bouquet
Air freshener companies are panicking
*/

QWidget {
    background-color: #DAA520; /* Goldenrod base */
    color: #8B4513; /* Saddle brown text */
    font-family: "Arial", sans-serif;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFFACD, stop:0.2 #F0E68C, stop:0.4 #DAA520, 
                stop:0.6 #8B7355, stop:0.8 #A0522D, stop:1 #FFFACD);
}

/* GASSY BUBBLE BUTTONS! */
QPushButton {
    background: qradial-gradient(ellipse at 40% 60%, #FFFF00 20%, #FFD700 50%, #DAA520 80%);
    color: #8B4513;
    border: 4px solid #B8860B;
    border-radius: 80px 25px 70px 35px; /* Irregular gas bubble shape! */
    padding: 16px 24px;
    font-weight: bold;
    font-size: 13px;
    box-shadow: inset 0px 0px 8px rgba(184,134,11,0.3);
    transform: rotate(8deg); /* Floating bubble tilt */
}

QPushButton:hover {
    background: qradial-gradient(ellipse at 60% 40%, #FFFFE0 30%, #FFFACD 60%, #F0E68C 90%);
    border-color: #CD853F;
    border-radius: 90px 35px 80px 45px; /* Expanding aromatic cloud */
    box-shadow: 0px 0px 25px rgba(255,250,205,0.8), inset 0px 0px 5px rgba(205,133,63,0.4);
    color: #654321;
    transform: rotate(12deg) scale(1.08); /* More floating and bigger */
}

QPushButton:pressed {
    background: qradial-gradient(ellipse at 50% 50%, #8B7355 40%, #654321 80%);
    border-radius: 60px 20px 50px 25px; /* Deflated bubble */
    border-color: #2F1B14;
    transform: rotate(5deg) scale(0.85);
    box-shadow: inset 0px 0px 15px rgba(47,27,20,0.7);
}

/* PERFUME BOTTLE TEXT FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #F5F5DC, stop:0.3 #FFFACD, stop:0.7 #F0E68C, stop:1 #F5F5DC);
    color: #8B4513;
    border: 4px solid #DAA520;
    border-radius: 15px 15px 40px 40px; /* Perfume bottle shape */
    padding: 14px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #FF69B4;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFF0F5, stop:0.4 #FFE4E1, stop:0.8 #FFC0CB, stop:1 #FFF0F5);
    border-radius: 20px 20px 50px 50px; /* Fancy perfume bottle */
    box-shadow: 0px 0px 15px rgba(255,105,180,0.5);
    color: #8B0000;
}

/* FLOWER BOUQUET TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 30%, #FFFACD 30%, #F0E68C 60%, #DAA520 90%);
    border: 5px solid #B8860B;
    border-radius: 60px 60px 20px 20px; /* Flower bouquet dome! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFB6C1, stop:0.4 #FF69B4, stop:0.8 #FF1493, stop:1 #DC143C);
    color: #8B0000;
    padding: 16px 26px;
    margin: 4px;
    border-radius: 50px 20px 40px 30px; /* Flower petal tabs */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #DA70D6;
}

QTabBar::tab:selected {
    background: qradial-gradient(ellipse at 50% 40%, #FFFF00 40%, #FFD700 80%);
    color: #8B4513;
    border-radius: 60px 30px 50px 40px; /* Blooming selected flower */
    border-color: #B8860B;
    box-shadow: 0px 0px 12px rgba(255,215,0,0.5);
}

/* SCENT DISPENSER SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #F0E68C, stop:0.3 #DAA520, stop:0.7 #B8860B, stop:1 #F0E68C);
    width: 26px;
    border-radius: 13px;
    border: 4px solid #8B7355;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #FF69B4 40%, #DA70D6 80%);
    border-radius: 11px;
    min-height: 35px;
    border: 3px solid #9932CC;
    margin: 4px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #FFB6C1 30%, #FF69B4 70%);
    box-shadow: 0px 0px 12px rgba(255,182,193,0.6);
}

/* FRAGRANCE SHOP MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #B8860B, stop:0.3 #DAA520, stop:0.7 #F0E68C, stop:1 #B8860B);
    color: #8B4513;
    border-bottom: 5px solid #654321;
    font-weight: bold;
    font-size: 15px;
    border-radius: 0px 0px 30px 50px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #FFB6C1 40%, #FF69B4 80%);
    color: #8B0000;
    border-radius: 25px 45px 20px 40px;
    padding: 12px 20px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFF0F5, stop:0.25 #FFE4E1, stop:0.5 #FFC0CB, 
                stop:0.75 #FFB6C1, stop:1 #FFF0F5);
    color: #8B0000;
    border: 5px solid #FF69B4;
    border-radius: 30px 50px 25px 55px;
    font-size: 14px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #DAA520 30%, #B8860B 70%);
    color: #F5F5DC;
    border-radius: 15px 35px 20px 40px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #654321, stop:0.4 #8B7355, stop:0.8 #DAA520, stop:1 #654321);
    color: #F5F5DC;
    border-top: 5px solid #2F1B14;
    font-weight: bold;
    font-size: 13px;
    border-radius: 50px 40px 0px 0px;
}

/* AROMATIC CLOUD PATTERN */
QLabel#aromaticCloud {
    background: qradial-gradient(ellipse at 30% 40%, rgba(255,255,224,0.7) 20%, transparent 21%),
                qradial-gradient(ellipse at 70% 25%, rgba(255,250,205,0.6) 25%, transparent 26%),
                qradial-gradient(ellipse at 45% 75%, rgba(240,230,140,0.8) 18%, transparent 19%),
                qradial-gradient(ellipse at 80% 70%, rgba(255,255,224,0.5) 22%, transparent 23%),
                qradial-gradient(ellipse at 20% 80%, rgba(218,165,32,0.4) 15%, transparent 16%),
                #FFFACD;
    color: #8B4513;
    border: 4px solid #DAA520;
    border-radius: 80px 40px 70px 50px;
    padding: 18px;
    font-weight: bold;
    font-size: 14px;
}

/* FLORAL ESSENCE EFFECT */
QWidget#floralEssence {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFB6C1, stop:0.2 #FF69B4, stop:0.4 #FF1493, 
                stop:0.6 #DA70D6, stop:0.8 #9370DB, stop:1 #FFB6C1);
    border: 3px solid #FF69B4;
    border-radius: 60px 30px 50px 40px;
    color: #8B0000;
    font-weight: bold;
}

/* SCENT INTENSITY METER */
QLabel#scentIntensity {
    background: qradial-gradient(circle at 50% 50%, #FFFF00 20%, #FFD700 50%, #DAA520 80%);
    color: #8B4513;
    border: 6px solid #B8860B;
    border-radius: 25px 60px 35px 70px;
    padding: 22px;
    font-weight: bold;
    font-size: 18px;
    font-family: "Impact", sans-serif;
    text-align: center;
}

/* NOSTRIL RESPONSE INDICATOR */
QLabel#nostrilResponse {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #F0E68C, stop:0.3 #DAA520, stop:0.7 #B8860B, stop:1 #F0E68C);
    color: #654321;
    border: 3px solid #8B7355;
    border-radius: 40px 15px 35px 20px;
    padding: 12px 16px;
    font-weight: bold;
    font-size: 12px;
}

/* PERFUME MIST EFFECT */
QWidget#perfumeMist {
    background: qradial-gradient(ellipse at 50% 20%, rgba(255,182,193,0.5) 30%, transparent 31%),
                qradial-gradient(ellipse at 30% 60%, rgba(255,105,180,0.4) 25%, transparent 26%),
                qradial-gradient(ellipse at 80% 50%, rgba(218,112,214,0.6) 20%, transparent 21%),
                #FFF0F5;
    border: 4px solid #FF69B4;
    border-radius: 50px 80px 60px 90px;
    color: #8B0000;
    font-weight: bold;
}