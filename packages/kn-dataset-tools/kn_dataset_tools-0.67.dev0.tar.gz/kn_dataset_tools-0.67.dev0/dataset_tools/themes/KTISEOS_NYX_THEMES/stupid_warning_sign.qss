/* STUPID IDEA: WARNING SIGN */
/* A theme mimicking a hazardous warning sign with black and yellow stripes. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FFFF00, stop: 0.5 #000000,
                                stop: 1 #FFFF00);
    color: #000000;
    border: 5px solid #FF0000;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FFFF00, stop: 0.5 #000000,
                                stop: 1 #FFFF00);
    color: #000000;
    font-family: 'Impact', sans-serif;
    font-size: 16px;
}

QPushButton {
    background: #FF0000;
    border: 5px solid #000000;
    border-radius: 0px;
    padding: 20px 30px;
    color: #FFFF00;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: #000000;
}

QTextEdit, QPlainTextEdit {
    background-color: #FFFFFF;
    color: #000000;
    border: 5px solid #FFFF00;
    border-radius: 0px;
    padding: 15px;
}

QListWidget {
    background-color: #000000;
    color: #FFFF00;
    border: 5px solid #FF0000;
    border-radius: 0px;
}

QListWidget::item:selected {
    background-color: #FFFF00;
    color: #000000;
}
