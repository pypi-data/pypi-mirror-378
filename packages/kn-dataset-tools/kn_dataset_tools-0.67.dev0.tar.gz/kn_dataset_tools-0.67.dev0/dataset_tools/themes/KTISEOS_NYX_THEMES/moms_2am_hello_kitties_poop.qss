/*
Mom's 2AM Fever Dreams Collection - "Hello Kitties Poop"
When kawaii meets the call of nature
Sanrio's legal department is having a meltdown
*/

QWidget {
    background-color: #FFB6C1; /* Light pink base */
    color: #8B4513; /* Saddle brown text */
    font-family: "Comic Sans MS", cursive;
    font-size: 12px;
}

QMainWindow {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFC0CB, stop:0.15 #FFB6C1, stop:0.3 #FF69B4, 
                stop:0.45 #8B4513, stop:0.6 #A0522D, stop:0.75 #CD853F, 
                stop:0.9 #FFB6C1, stop:1 #FFC0CB);
}

/* KAWAII POOP BUTTONS! */
QPushButton {
    background: qradial-gradient(ellipse at 40% 20%, #DEB887 20%, #D2B48C 50%, #BC9A6A 80%);
    color: #654321;
    border: 4px solid #A0522D;
    border-radius: 25px 35px 15px 45px; /* Kawaii poop swirl shape! */
    padding: 16px 24px;
    font-weight: bold;
    font-size: 14px;
    box-shadow: inset 0px 0px 8px rgba(160,82,45,0.3);
}

QPushButton:hover {
    background: qradial-gradient(ellipse at 60% 30%, #FFB6C1 30%, #FF69B4 60%, #FF1493 90%);
    border-color: #DC143C;
    border-radius: 35px 45px 25px 55px; /* Excited kawaii poop! */
    box-shadow: 0px 0px 20px rgba(255,105,180,0.6), inset 0px 0px 5px rgba(220,20,60,0.4);
    color: #8B0000;
    transform: scale(1.08); /* Happy bounce effect */
}

QPushButton:pressed {
    background: qradial-gradient(ellipse at 50% 70%, #8B4513 40%, #654321 80%);
    border-radius: 20px 30px 10px 40px; /* Squished poop */
    border-color: #2F1B14;
    transform: scale(0.85);
    box-shadow: inset 0px 0px 15px rgba(47,27,20,0.7);
}

/* HELLO KITTY BOW TEXT FIELDS */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFF0F5, stop:0.3 #FFE4E1, stop:0.7 #FFC0CB, stop:1 #FFF0F5);
    color: #8B0000;
    border: 4px solid #FF69B4;
    border-radius: 50px 15px 50px 15px; /* Bow tie shape */
    padding: 14px;
    font-size: 13px;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #DC143C;
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFFACD, stop:0.4 #FFF8DC, stop:0.8 #F5DEB3, stop:1 #FFFACD);
    border-radius: 60px 20px 60px 20px; /* Bigger bow when focused */
    box-shadow: 0px 0px 15px rgba(220,20,60,0.5);
    color: #8B4513;
}

/* LITTER BOX TABS */
QTabWidget::pane {
    background: qradial-gradient(ellipse at 50% 60%, #F5DEB3 30%, #DEB887 60%, #D2B48C 90%);
    border: 5px solid #8B4513;
    border-radius: 20px 20px 60px 60px; /* Litter box shape! */
}

QTabBar::tab {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FFC0CB, stop:0.4 #FFB6C1, stop:0.8 #FF69B4, stop:1 #FF1493);
    color: #8B0000;
    padding: 16px 28px;
    margin: 4px;
    border-radius: 40px 40px 0px 0px; /* Kitty ear tabs! */
    font-weight: bold;
    font-size: 14px;
    border: 3px solid #DC143C;
}

QTabBar::tab:selected {
    background: qradial-gradient(ellipse at 50% 40%, #DEB887 40%, #D2B48C 80%);
    color: #654321;
    border-radius: 50px 50px 0px 0px; /* Happy kitty ears */
    border-color: #A0522D;
    box-shadow: 0px 0px 12px rgba(222,184,135,0.4);
}

/* KAWAII SPARKLE SCROLL BARS */
QScrollBar:vertical {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                stop:0 #FFB6C1, stop:0.3 #FF69B4, stop:0.7 #FF1493, stop:1 #FFB6C1);
    width: 26px;
    border-radius: 13px;
    border: 4px solid #DC143C;
}

QScrollBar::handle:vertical {
    background: qradial-gradient(circle, #FFD700 40%, #FFA500 80%);
    border-radius: 11px;
    min-height: 35px;
    border: 3px solid #FF8C00;
    margin: 4px;
}

QScrollBar::handle:vertical:hover {
    background: qradial-gradient(circle, #FFFF00 30%, #FFD700 70%);
    box-shadow: 0px 0px 12px rgba(255,215,0,0.6);
}

/* SANRIO LAWSUIT MENU BAR */
QMenuBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #FF1493, stop:0.3 #FF69B4, stop:0.7 #FFB6C1, stop:1 #FF1493);
    color: #FFF0F5;
    border-bottom: 5px solid #8B0000;
    font-weight: bold;
    font-size: 15px;
    border-radius: 0px 0px 30px 50px;
}

QMenuBar::item:selected {
    background: qradial-gradient(ellipse, #DEB887 40%, #D2B48C 80%);
    color: #654321;
    border-radius: 25px 45px 20px 40px;
    padding: 12px 20px;
}

QMenu {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FFF0F5, stop:0.25 #FFE4E1, stop:0.5 #FFC0CB, 
                stop:0.75 #FFB6C1, stop:1 #FFF0F5);
    color: #8B0000;
    border: 5px solid #FF69B4;
    border-radius: 30px 50px 25px 55px;
    font-size: 14px;
    font-weight: bold;
}

QMenu::item:selected {
    background: qradial-gradient(ellipse, #D2B48C 30%, #BC9A6A 70%);
    color: #F5DEB3;
    border-radius: 15px 35px 20px 40px;
    margin: 3px;
}

QStatusBar {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                stop:0 #8B0000, stop:0.4 #DC143C, stop:0.8 #FF69B4, stop:1 #8B0000);
    color: #FFF0F5;
    border-top: 5px solid #4B0000;
    font-weight: bold;
    font-size: 13px;
    border-radius: 50px 40px 0px 0px;
}

/* KAWAII SPARKLES PATTERN */
QLabel#kawaiiSparkles {
    background: qradial-gradient(ellipse at 25% 25%, #FFD700 8%, transparent 9%),
                qradial-gradient(ellipse at 75% 35%, #FFA500 6%, transparent 7%),
                qradial-gradient(ellipse at 45% 70%, #FFFF00 10%, transparent 11%),
                qradial-gradient(ellipse at 80% 80%, #FF69B4 12%, transparent 13%),
                qradial-gradient(ellipse at 15% 85%, #FF1493 8%, transparent 9%),
                qradial-gradient(ellipse at 60% 15%, #FFD700 7%, transparent 8%),
                #FFC0CB;
    color: #8B0000;
    border: 4px solid #FF69B4;
    border-radius: 30px 50px 25px 45px;
    padding: 18px;
    font-weight: bold;
    font-size: 16px;
}

/* HELLO KITTY FACE PATTERN */
QWidget#helloKittyFace {
    background: qradial-gradient(ellipse at 35% 35%, #000000 3%, transparent 4%),
                qradial-gradient(ellipse at 65% 35%, #000000 3%, transparent 4%),
                qradial-gradient(ellipse at 50% 50%, #FFB6C1 15%, transparent 16%),
                qradial-gradient(ellipse at 40% 65%, #000000 2%, transparent 3%),
                qradial-gradient(ellipse at 50% 65%, #000000 2%, transparent 3%),
                qradial-gradient(ellipse at 60% 65%, #000000 2%, transparent 3%),
                #FFF0F5;
    border: 3px solid #FF69B4;
    border-radius: 80px;
}

/* POOP EMOJI EFFECT */
QLabel#poopEmoji {
    background: qradial-gradient(ellipse at 50% 30%, #DEB887 20%, #D2B48C 50%, #BC9A6A 80%);
    color: #654321;
    border: 6px solid #8B4513;
    border-radius: 30px 40px 20px 50px;
    padding: 22px;
    font-weight: bold;
    font-size: 24px;
    font-family: "Impact", sans-serif;
    text-align: center;
}

/* KAWAII EYES EFFECT */
QLabel#kawaiiEyes {
    background: qradial-gradient(ellipse at 30% 40%, #000000 15%, transparent 16%),
                qradial-gradient(ellipse at 70% 40%, #000000 15%, transparent 16%),
                qradial-gradient(ellipse at 30% 40%, #FFFFFF 8%, transparent 9%),
                qradial-gradient(ellipse at 70% 40%, #FFFFFF 8%, transparent 9%),
                #FFC0CB;
    border: 3px solid #FF69B4;
    border-radius: 60px 60px 30px 30px;
    padding: 15px;
    color: #8B0000;
    font-weight: bold;
}

/* SANRIO COPYRIGHT WARNING */
QWidget#copyrightWarning {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                stop:0 #FF0000, stop:0.3 #FF4500, stop:0.7 #FF6347, stop:1 #FF0000);
    border: 5px solid #8B0000;
    border-radius: 25px;
    color: #FFFFFF;
    font-weight: bold;
    font-size: 12px;
    padding: 15px;
}