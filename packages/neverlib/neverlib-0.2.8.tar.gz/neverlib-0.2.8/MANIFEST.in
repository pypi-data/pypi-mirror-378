# 包含基础项目文件
include LICENSE
include README.md
include pyproject.toml
include CLAUDE.md
include setup.py
include requirements.txt

# 包含 neverlib 包中的所有 Python 文件
recursive-include neverlib *.py

# 包含文档和说明文件
recursive-include neverlib *.txt
recursive-include neverlib *.md
recursive-include neverlib *.json
recursive-include neverlib *.yaml
recursive-include neverlib *.yml
recursive-include neverlib/Docs *.ipynb

# 包含测试文件
recursive-include neverlib/tests *.py
recursive-include neverlib/tests *.txt
recursive-include neverlib/tests *.md

# 包含音频数据文件
recursive-include neverlib/data *.wav
recursive-include neverlib/audio_aug/data *
recursive-include neverlib/filter/data *

# 包含文档和示例目录
recursive-include neverlib/Docs *
recursive-include neverlib/QA *

# 包含DNSMOS和pDNSMOS模型文件
recursive-include neverlib/metrics/DNSMOS *.onnx
recursive-include neverlib/metrics/pDNSMOS *.onnx

# 包含PESQ C实现文件
recursive-include neverlib/metrics/pesq_c *.c
recursive-include neverlib/metrics/pesq_c *.h
recursive-include neverlib/metrics/pesq_c PESQ

# 包含VAD相关图像文件
recursive-include neverlib/vad *.png

# 排除不需要的文件
global-exclude *.py[cod] __pycache__/ *.so *.dylib .DS_Store
global-exclude .env .venv env/ venv/
global-exclude *.log .coverage .pytest_cache/ build/ dist/
global-exclude .idea/ .vscode/ *.swp *.swo