# Documentation
include README.md
include LICENSE
include CHANGELOG.md

# Package requirements
include requirements.txt

# Package contents
recursive-include blocks_cli *

# Common Python excludes
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__/*
global-exclude *.so
global-exclude *.egg
global-exclude *.egg-info/*

# Development/IDE excludes
global-exclude .git*
global-exclude .DS_Store
global-exclude .env
global-exclude .venv/*
global-exclude .idea/*
global-exclude .vscode/*
