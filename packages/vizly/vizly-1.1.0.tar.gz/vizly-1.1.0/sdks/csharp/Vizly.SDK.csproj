<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Vizly.SDK</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Title>Vizly Commercial Visualization SDK for .NET</Title>
    <Description>Official .NET SDK for Vizly - Commercial visualization library with GPU acceleration, VR/AR support, and real-time streaming capabilities.</Description>
    <Authors>Infinidatum Corporation</Authors>
    <Company>Infinidatum Corporation</Company>
    <Copyright>Â© 2024 Infinidatum Corporation. All rights reserved.</Copyright>
    <PackageLicenseExpression>LicenseRef-Commercial</PackageLicenseExpression>
    <PackageProjectUrl>https://pypi.org/project/vizly/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/infinidatum/vizly-sdk</RepositoryUrl>
    <PackageTags>visualization;charts;gpu;vr;ar;commercial;enterprise</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageIcon>vizly-icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Python.Runtime" Version="3.0.3" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="vizly-icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>