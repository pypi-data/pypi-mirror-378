[tool.ruff]
line-length = {{ pythonLineLength }}

[tool.ruff.lint]
select = [
    # pycodestyle
    "E",
    # Pyflakes
    "F",
    # pyupgrade
    "UP",
    # flake8-bugbear
    "B",
    # flake8-simplify
    "SIM",
    # isort
    "I",
]
ignore = [{% for rule in pythonIgnoredRules %}{% if loop.index > 1 %},{% endif %}"{{rule}}"{% endfor %}]
