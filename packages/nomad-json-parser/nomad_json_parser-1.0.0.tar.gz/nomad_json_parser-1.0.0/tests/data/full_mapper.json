{
    "json_mapper_class_key": "CPFSBridgmanTechnique",
    "main_schema": {
        "is_main": "True",
        "schema": "cpfs_synthesis.schema_packages.bridgman.CPFSBridgmanTechnique",
            "rules": {
                "ID":{
                    "source": "General_information.Name",
                    "target": "name"
                }
        }
    },
    "Furnace": {
        "main_key": "furnace",
        "schema": "cpfs_synthesis.cpfs_schemes.CPFSFurnace",
            "rules": {
                "model": {
                    "source": "Furnace.Furnace_Name",
                    "target": "model",
                    "use_rule": "model"
                },
                "name": {
                    "source": "Furnace.Furnace_Name",
                    "target": "name",
                    "default_value": "default_name"
                },
                "geometry": {
                    "source": "Furnace.Geometry",
                    "target": "geometry",
                    "conditions": [
                        {"regex_condition": {"regex_path": "Furnace.Geometry", "regex_pattern": "^abc"}}
                    ]
                },
                "Furnace.Heating_Type": "heating"
        }
    },
    "crucible": {
        "main_key": "crucible",
        "schema": "cpfs_synthesis.cpfs_schemes.CPFSCrucible",
            "rules": {
                "name": {
                    "source": "Crucible.Crucible_Material",
                    "target": "material"
                },
                "diameter": {
                    "source": "Crucible.Diameter.value",
                    "target": "diameter"
                },
                "diameter_unit": {
                   "source": "Crucible.Diameter.unit",
                    "target": "tempunits.diameter"
                }
            }
    },
    "resultingcrystal": {
        "main_key": "resulting_crystal",
        "schema": "cpfs_synthesis.cpfs_schemes.CPFSCrystal",
        "is_archive": "True",
            "rules": {
                "ID": {
                    "source": "General_information.Sample_ID",
                    "target": "sample_id"
                },
                "Safety": {
                    "source": "Basic_properties_of_the_sample.Safety_and_Reactivity",
                    "target": "safety_reactivity"
                },
                "name": {
                    "source": "General_information.Sample_ID",
                    "target": "name"
                },
                "composition": {
                    "source": "Basic_properties_of_the_sample.Achieved_Composition",
                    "target": "achieved_composition"
                },
                "final crystal length": {
                    "source": "Basic_properties_of_the_sample.final_crystal_length.value",
                    "target": "final_crystal_length"
                },
                "shape": {
                    "source": "Basic_properties_of_the_sample.Crystal_shape",
                    "target": "crystal_shape"
                },
                "gfwsdfsd": {
                    "source": "Basic_properties_of_the_sample.Crystal_orientation",
                    "target": "crystal_orientation"
                }
            }
    },
    "synthesis_components": {
        "main_key": "synthesis_components_read_in",
        "schema": "cpfs_synthesis.schema_packages.bridgman.TempSynthesisComponents",
            "rules": {
                "initial material": {
                    "source": "Initial_materials.Sheet1.Initial_Material",
                    "target": "initial_material"
                },
                "weight": {
                    "source": "Initial_materials.Sheet1.Amount",
                    "target": "amount"
                },
                "company": {
                    "source": "Initial_materials.Sheet1.Manufacturer",
                    "target": "manufacturer"
                }
            }
    },
    "temperature_step": {
        "main_key": "steps",
        "schema": "cpfs_synthesis.schema_packages.bridgman.CPFSBridgmanTechniqueStep",
        "repeats": "True",
        "rules": {
            "Process_Parameters.Temperature.value": "temperature",
            "Process_Parameters.Pulling_rate.value": "pulling_rate",
            "Process_Parameters.Temperature.unit": "tempunits.temperature",
            "Process_Parameters.Pulling_rate.unit": "tempunits.pulling_rate"
        }
    }
}