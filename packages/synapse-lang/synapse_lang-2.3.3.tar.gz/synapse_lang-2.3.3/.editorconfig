# EditorConfig for Synapse Language Project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.syn]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.sh]
end_of_line = lf

[*.bat]
end_of_line = crlf

[*.py]
max_line_length = 127
indent_size = 4